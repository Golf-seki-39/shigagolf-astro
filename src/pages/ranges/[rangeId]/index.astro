        }
        let scoresHTML = '';
        if (isAdminReview && review?.scores) {
            try {
                const safeScoresData = escapeHTML(JSON.stringify(review.scores));
                scoresHTML = `<div class="my-4 max-w-sm mx-auto"><canvas class="radar-chart-canvas" data-scores='${safeScoresData}'></canvas></div>`;
            } catch (e) { console.error("ã‚¹ã‚³ã‚¢ãƒ‡ãƒ¼ã‚¿ã®JSONå¤‰æ›ã«å¤±æ•—:", e, review.scores); }
        }
        const safeRatingString = escapeHTML(String(review?.rating || 'N/A'));
        article.innerHTML = `
            <div class="flex items-center gap-x-4">
                <div class="text-amber-500 text-xl" title="${safeRatingString}ã¤æ˜Ÿ">${stars}</div>
                ${isAdminReview ? `<span class="bg-green-100 text-green-800 text-xs font-semibold px-2.5 py-0.5 rounded-full">å…¬å¼ãƒ¬ãƒ“ãƒ¥ãƒ¼</span>` : ''}
            </div>
            <h3 class="text-lg font-bold mt-2">${safeTitle}</h3>
            ${scoresHTML}
            <p class="text-slate-600 my-4 whitespace-pre-wrap">${safeBody}</p>
            ${imagesHTML}
            <p class="text-sm text-slate-500 text-right mt-4">æŠ•ç¨¿è€…: ${safeAuthor} / æŠ•ç¨¿æ—¥: ${date}</p>
        `;
        return article;
    }

    // --- Render Radar Charts (Chart.jsã‚’å‹•çš„ã‚¤ãƒ³ãƒãƒ¼ãƒˆ) ---
    async function renderRadarCharts() { 
        if (typeof Chart === 'undefined') {
            try {
                // UMDç‰ˆã‚’ã‚¤ãƒ³ãƒãƒ¼ãƒˆã—ã¦ã‚°ãƒ­ãƒ¼ãƒãƒ« (window.Chart) ã«ç™»éŒ²
                await import('https://cdn.jsdelivr.net/npm/chart.js/dist/chart.umd.js');
                if (typeof Chart === 'undefined') {
                     throw new Error("Chart.js UMD module did not register window.Chart");
                }
            } catch (e) {
                console.error("Chart.jsã®èª­ã¿è¾¼ã¿ã«å¤±æ•—ã—ã¾ã—ãŸ:", e);
                return;
            }
        }

        document.querySelectorAll('.radar-chart-canvas:not(.chartjs-render-monitor)').forEach(canvas => {
            if (canvas.chart) return; 
            try {
                const scoresData = JSON.parse(canvas.dataset.scores);
                const chart = new Chart(canvas, { type: 'radar', data: { labels: Object.keys(scoresData), datasets: [{ label: 'è©•ä¾¡ã‚¹ã‚³ã‚¢', data: Object.values(scoresData), fill: true, backgroundColor: 'rgba(34, 197, 94, 0.2)', borderColor: 'rgb(22, 163, 74)', pointBackgroundColor: 'rgb(22, 163, 74)', pointBorderColor: '#fff', pointHoverBackgroundColor: '#fff', pointHoverBorderColor: 'rgb(22, 163, 74)' }] }, options: { responsive: true, maintainAspectRatio: false, scales: { r: { angleLines: { display: true }, suggestedMin: 0, suggestedMax: 5, ticks: { stepSize: 1, backdropColor: 'rgba(255, 255, 255, 0.75)', color: '#64748b', }, pointLabels: { font: { size: 10 }, color: '#334155' } } }, plugins: { legend: { display: false } } } });
                canvas.chart = chart;
            } catch (e) { console.error("ãƒ¬ãƒ¼ãƒ€ãƒ¼ãƒãƒ£ãƒ¼ãƒˆã®æç”»ã«å¤±æ•—:", e, canvas.dataset.scores); canvas.outerHTML = `<p class="text-center text-red-500 text-sm">ãƒãƒ£ãƒ¼ãƒˆæç”»ã‚¨ãƒ©ãƒ¼</p>`; }
        });
    }

    // --- Load Reviews ---
    async function loadReviews() {
        const reviewsListContainer = document.getElementById('reviews-list');
        if (!reviewsListContainer) return;
        try {
            const { initializeApp, getFirestore, collection, query, orderBy, getDocs } = await getFirebaseModules();
            let app = window._firebaseAppV10 || initializeApp(passedConfig); window._firebaseAppV10 = app;
            const db = getFirestore(app);
            const appId = passedConfig.appId;
            const publicDataPath = `artifacts/${appId}/public/data`;
            const fullReviewPath = `${publicDataPath}/practice_ranges/${rangeId}/reviews`;
            const reviewsCollectionRef = collection(db, fullReviewPath);
            const q = query(reviewsCollectionRef, orderBy("createdAt", "desc"));
            const querySnapshot = await getDocs(q);
            reviewsListContainer.innerHTML = '';
            if (querySnapshot.empty) { reviewsListContainer.innerHTML = `<p id="no-reviews-message" class="text-center text-slate-500 py-8">ã“ã®ç·´ç¿’å ´ã«ã¯ã¾ã ãƒ¬ãƒ“ãƒ¥ãƒ¼ãŒã‚ã‚Šã¾ã›ã‚“ã€‚</p>`; return; }
            const adminReviews = [], userReviews = [];
            querySnapshot.forEach(doc => { const review = doc.data(); (review?.author === "é–¢ï¼ ã‚·ã‚¬ã‚´ãƒ«ç®¡ç†äºº" ? adminReviews : userReviews).push(review); });
            const sortedReviews = [...adminReviews, ...userReviews];
            const fragment = document.createDocumentFragment();
            sortedReviews.forEach(review => { if (review) { fragment.appendChild(createReviewArticle(review)); } });
            reviewsListContainer.appendChild(fragment);
            
            await renderRadarCharts(); // ãƒãƒ£ãƒ¼ãƒˆã‚’æç”»

        } catch (error) { console.error("ãƒ¬ãƒ“ãƒ¥ãƒ¼ã®èª­ã¿è¾¼ã¿ã«å¤±æ•—ã—ã¾ã—ãŸ:", error); if (reviewsListContainer) { reviewsListContainer.innerHTML = `<p class="text-center text-red-600 py-8">ãƒ¬ãƒ“ãƒ¥ãƒ¼ã®èª­ã¿è¾¼ã¿ä¸­ã«ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸã€‚</p>`; } }
    }

    // --- Initialize Static Scripts (ãƒ•ã‚©ãƒˆã‚®ãƒ£ãƒ©ãƒªãƒ¼ã®è¡¨ç¤ºåˆ‡æ›¿ãªã©) ---
    function initializeStaticScripts() {
        const showButton = document.getElementById("show-review-form-btn");
        const formWrapper = document.getElementById("review-form-wrapper");
