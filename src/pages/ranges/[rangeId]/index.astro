    }

    // --- æ±ç”¨çš„ãªé…å»¶èª­ã¿è¾¼ã¿ã‚ªãƒ–ã‚¶ãƒ¼ãƒãƒ¼ ---
    function createLazyLoader(targetSelector, callback, rootMargin = '200px') {
        const targetElement = document.querySelector(targetSelector);
        if (!targetElement) {
            console.warn(`[Shigagolf Debug] createLazyLoader: Target ${targetSelector} not found.`);
            return;
        }
        const observerOptions = {
            root: null, 
            rootMargin: rootMargin, 
            threshold: 0.01 
        };
        const observerCallback = (entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    callback(); 
                    observer.unobserve(targetElement); 
                    console.log(`[Shigagolf Debug] ${targetSelector} loaded lazily.`);
                }
            });
        };
        const observer = new IntersectionObserver(observerCallback, observerOptions);
        observer.observe(targetElement);
    }

    // --- ã‚«ã‚¹ã‚¿ãƒ ã‚¤ãƒ™ãƒ³ãƒˆ 'reviewPosted' ã®ãƒªã‚¹ãƒŠãƒ¼ ---
    document.addEventListener('reviewPosted', async (event) => { 
        console.log('[Shigagolf Debug] New review posted:', event.detail);
        const newReviewData = event.detail;
