        }
    });

    // --- ã‚¹ã‚¯ãƒªãƒ—ãƒˆã®å®Ÿè¡Œï¼ˆDOMã®æº–å‚™ã‚’å¾…ã¤ï¼‰ ---
    function runScripts() {
        try {
            console.log("[Shigagolf Debug] runScripts: Executing.");
            initializeStaticScripts();
            createLazyLoader('#reviews-list', loadReviews, '300px');
