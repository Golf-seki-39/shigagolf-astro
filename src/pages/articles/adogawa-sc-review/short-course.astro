---
// --- [1] AstroとFirebaseの基本設定 ---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { db } from "../../../lib/firebase.js";
import { doc, getDoc } from "firebase/firestore";
// [修正点1] AstroのImageコンポーネントをインポート
import { Image } from "astro:assets";

// --- [2] 3つの共通コンポーネントをインポート ---
import MySlider from "../../../components/MySlider.astro";
import ShareButtons from "../../../components/ShareButtons.astro";
import AuthorProfile from "../../../components/AuthorProfile.astro";

// --- [3] この記事固有の情報 ---
const title =
    "<span class='title-line'>「グリーンは公園並み!?」</span><span class='br-mobile'><br /></span><span class='title-line'>安曇川スポーツセンターの</span><span class='br-mobile'><br /></span><span class='title-line'>ショートコースで見つけた</span><span class='br-mobile'><br /></span><span class='title-line'>“最高の練習日”【滋賀・高島市】 | シガゴル</span>";
const description =
    "滋賀県高島市、安曇川スポーツセンターのショートコースを正直レビュー。料金（一般3,000円）や、公園のようなグリーンの実態、家族で一日楽しめる活用術を徹底解説。";
const category = "体験談";
const pubDate = "2025-10-09";
const pubDateISO = "2025-10-09T18:00:00+09:00";
const imageUrl = "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/adogawa_sc/gallery/001111img.jpg";
const rangeId = "adogawa_sc";
const docPath = `artifacts/${import.meta.env.PUBLIC_FIREBASE_APP_ID}/public/data/practice_ranges/${rangeId}`;

// --- [4] シェアボタン用の変数を定義 ---
const baseUrl = "https://shigolf.com";
const articleUrl = `${baseUrl}/articles/adogawa-sc-review/short-course/`;
const headlineLines = [
    "「グリーンは公園並み!?」",
    "安曇川スポーツセンターの",
    "ショートコースで見つけた",
    "“最高の練習日”",
];
const headline = headlineLines.join("");

// --- [5] Firebaseから施設データを取得 ---
const docRef = doc(db, docPath);
const docSnap = await getDoc(docRef);
let rangeData = null;
if (docSnap.exists()) {
    rangeData = docSnap.data();
} else {
    console.error(`Error: No document found for rangeId: ${rangeId}`);
}

// --- [6] 全ての記事で共通して使う「関連記事リスト」を定義 ---
const experienceReports = [
    { url: '/articles/azuchi-review/', title: '安土ゴルフクラブ 体験レポート', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/azuchi_gc/gallery/0000image0000.png' },
    { url: '/articles/sakura-gc-review/', title: 'さくらゴルフ倶楽部 体験レポート', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/sakura_gc/gallery/00000ai.png' },
    { url: '/articles/garege-park-review/', title: 'がれーじぱーく東近江 体験レポート', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/garage_park/gallery/00000ai.jpg' },
　　 { url: '/articles/review/greenpia-oh/', title: 'グリーンピア近江八幡ゴルフ 体験レポート', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/greenpia_oh/gallery/シガゴル (14).jpg' },
    { url: '/articles/review/riverside-jumbo/', title: 'リバーサイドジャンボゴルフ 体験レポート', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/riverside_jumbo/gallery/シガゴル (15).jpg' },
];
const comparisonArticles = [
    { url: '/articles/comparison/omi-priceRank/', title: '【料金で徹底比較】近江八幡・東近江の安い練習場5選', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/シガゴル (2).jpg' },
    { url: '/articles/omi-higashiomi-approach/', title: '【アプローチ＆バンカー練習場】近江八幡・東近江5選', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/approach.jpg' },
    { url: '/articles/comparison/omi-putting/', title: '【パター練習場が充実】近江八幡・東近江エリア5選', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/シガゴル.jpg' },
    { url: '/articles/comparison/omi-lesson/', title: '【レッスン比較】近江八幡・東近江の初心者向け4選', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/シガゴル (12).jpg' },
    { url: '/articles/comparison/higashiomi-guide/', title: '【2025年最新】東近江市のゴルフ練習場まとめ｜全3施設を料金・設備で徹底比較', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/シガゴル (14).jpg' },
    { url: '/articles/comparison/o-mihachiman-guide/', title: '【2025年最新】近江八幡市のゴルフ練習場まとめ｜全3施設を料金・設備で徹底比較', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/シガゴル (14)のコピー.jpg' },
    { url: '/articles/comparison/omi-higashiomi-comparison/', title: '【総合比較】近江八幡・東近江エリアのゴルフ練習場4選', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/ナイスミス (9).png' },
];
---

<BaseLayout
    title={title.replace(/<[^>]*>/g, "")}
    description={description}
    pubDate={pubDate}
    ogImage={imageUrl}
>
    <script
        slot="head"
        type="application/ld+json"
        set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "Article",
            // [修正点4] mainEntityOfPage を追加
            mainEntityOfPage: {
                "@type": "WebPage",
                "@id": articleUrl,
            },
            headline: headline.replace(/<[^>]*>/g, ""),
            description: description,
            image: [
                imageUrl,
                "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/adogawa_sc/gallery/IMG_8758.png",
                "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/adogawa_sc/gallery/IMG_8778.png",
            ],
            author: {
                "@type": "Person",
                name: "関（せき）",
                url: "https://shigolf.com/about/",
                image: "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/author.png",
                sameAs: [
                    "https://x.com/Golf_Seki39",
                    "https://golf-medley.com/articles/authors/seki",
                    "https://note.com/seki_golf_39",
                    "https://www.tiktok.com/@user2579514551181",
                ],
            },
            publisher: {
                "@type": "Organization",
                name: "シガゴル",
                logo: {
                    "@type": "ImageObject",
                    url: "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/logo.png",
                },
            },
            datePublished: pubDateISO,
            dateModified: pubDateISO,
            review: {
                "@type": "Review",
                itemReviewed: {
                    "@type": "LocalBusiness",
                    name:
                        rangeData?.name_short_course ||
                        `${rangeData?.name} ショートコース`,
                    image: imageUrl,
                    telephone: rangeData?.phone,
                    priceRange: "500円〜3,000円",
                    address: {
                        "@type": "PostalAddress",
                        streetAddress: rangeData?.address,
                        addressLocality: rangeData?.city,
                        addressRegion: "滋賀県",
                        postalCode: rangeData?.postalCode,
                        addressCountry: "JP",
                    },
                },
                reviewRating: {
                    "@type": "Rating",
                    ratingValue: rangeData?.rating_short_course || "3.5",
                    bestRating: "5",
                    worstRating: "1",
                },
                author: { "@type": "Person", name: "関（せき）" },
            },
        })}
    />

    <div class="bg-white p-6 md:p-8 rounded-lg shadow-lg max-w-4xl mx-auto">
        <a
            href="/articles/"
            class="nav-link back-button mb-6 text-green-700 font-semibold hover:underline"
        >
            ‹ お役立ち記事一覧に戻る
        </a>

        <header>
            <h1 class="text-[28px] md:text-4xl font-bold text-slate-800">
                {
                    headlineLines.map((line) => (
                        <span style="display: block;">{line}</span>
                    ))
                }
            </h1>
            <p class="text-sm text-slate-500 mt-2">公開日：{pubDate}</p>
        </header>

        <article
            class="prose lg:prose-xl max-w-none text-slate-700 leading-relaxed mt-6"
        >
            <p>
                うだるような暑さが続いていた、お盆の最中のことでした。滋賀県高島市にある安曇川スポーツセンターのショートコースを家族で体験してきました。「たまには家族サービスも兼ねて、ゴルフでも行こうか」そう思い立った私は、そのショートコースの門を叩きました。
            </p>
            <figure class="my-6">
                <Image
                    src="https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/adogawa_sc/gallery/IMG_8702.png"
                    alt="安曇川スポーツセンターのショートコースの様子"
                    class="w-full h-auto object-cover rounded-lg"
                    loading="lazy"
                    width={1200}
                    height={800}
                    format="webp"
                    quality={80}
                />
            </figure>
            <p>
                本格的なゴルフ場よりもずっと安価で、ラウンド気分が味わえます。しかも、今回はメディア掲載の取材も兼ねており、事前にTikTok経由で連絡を取り合った支配人からも快い返事をいただいていました。
            </p>
            <p>
                快晴の空の下、家族の笑い声を聞きながら、私の心は躍っていました。「今日は楽しむぞ！」そんな期待に満ちた一日は、しかし、最初のホールのグリーンに立った瞬間、予想だにしなかった方向へと舵を切ることになります。
            </p>
            <div
                class="summary-box bg-green-50 p-6 rounded-lg border border-green-200 my-8 not-prose"
            >
                <h2 class="text-xl font-bold mb-4 text-green-800">
                    安曇川SC ショートコースの要点
                </h2>
                <ul class="space-y-2 list-disc list-inside">
                    <li>
                        <strong>料金:</strong> 一般 3,000円 / ジュニア 500円
                    </li>
                    <li>
                        <strong>特徴:</strong> 1日回り放題、アプローチ練習に最適
                    </li>
                    <li>
                        <strong>グリーン:</strong> 状態は「公園並み」でパット練習には不向き
                    </li>
                    <li>
                        <strong>その他:</strong> 家族連れに最高、レンタルクラブ無料
                    </li>
                </ul>
                <p class="mt-4 text-sm">※詳細は本文で解説しています</p>
            </div>
            <div
                class="toc-container bg-slate-50 p-6 rounded-lg border border-slate-200 my-8 not-prose"
            >
                <h2 class="text-xl font-bold mb-4 text-slate-800">
                    この記事の目次
                </h2>
                <ul class="space-y-2 list-disc list-inside">
                    <li>
                        <a
                            href="#section-1"
                            class="text-green-700 hover:underline"
                            >クラブハウスは“冷房天国”！支配人の人柄が温かい</a
                        >
                    </li>
                    <li>
                        <a
                            href="#section-2"
                            class="text-green-700 hover:underline"
                            >コースの第一印象は…まさかの“公園グリーン”</a
                        >
                    </li>
                    <li>
                        <a
                            href="#section-3"
                            class="text-green-700 hover:underline"
                            >スコアを忘れて“練習モード”へシフト</a
                        >
                    </li>
                    <li>
                        <a
                            href="#section-4"
                            class="text-green-700 hover:underline"
                            >家族で一日中楽しめるショートコース</a
                        >
                    </li>
                    <li>
                        <a
                            href="#info-summary"
                            class="text-green-700 hover:underline"
                            >基本情報まとめ</a
                        >
                    </li>
                </ul>
            </div>

            <h2
                id="section-1"
                class="scroll-mt-24 text-2xl md:text-3xl font-bold text-slate-800 mt-12 mb-4"
            >
                クラブハウスは“冷房天国”！<span class="br-mobile"><br /></span
                >支配人の人柄が温かい
            </h2>

            <p>
                クラブハウスのドアを開けた瞬間、「ふぅ…」と安堵のため息が漏れました。外の猛暑が嘘のような、キンキンに冷えた空間は、まさにオアシスです。
            </p>
            <figure class="my-6">
                <Image
                    src="https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/adogawa_sc/gallery/IMG_8743.png"
                    alt="アットホームな雰囲気のクラブハウス内部"
                    class="w-full h-auto object-cover rounded-lg"
                    loading="lazy"
                    width={1200}
                    height={800}
                    format="webp"
                    quality={80}
                />
            </figure>
            <p>
                出迎えてくれた支配人は、SNSでのやり取り通りの誠実な方で、常連さんらしき人たちと楽しそうに談笑しており、アットホームで実にいい雰囲気でした。
            </p>
            <p>
                クラブハウスの中にはウォーターサーバーが設置されています。暑い日だったので、冷たい水がいつでも飲めるのは、本当にありがたいポイントでした。「ここは当たりだな」そんな確信を抱きながら、私たちはコースへと足を踏み出しました。
            </p>
            <p>
                コースは木々に囲まれ、日差しが強い中でも日陰が多くなっています。直射日光を浴びないだけで、体力の消耗は全く違います。時折吹き抜ける風を感じながら、影から影へと渡り歩く。快適なラウンドの舞台は、完全に整っていました。
            </p>

            <h2
                id="section-2"
                class="scroll-mt-24 text-2xl md:text-3xl font-bold text-slate-800 mt-12 mb-4"
            >
                コースの第一印象は…<span class="br-mobile"><br /></span
                >まさかの“公園グリーン”
            </h2>

            <p>
                ティーショットを打ち、意気揚々と最初のグリーンへ。そこに広がっていたのは、私の知っている「グリーン」ではありませんでした。
            </p>

            <figure class="my-6">
                <Image
                    src="https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/adogawa_sc/gallery/IMG_8758.png"
                    alt="芝が禿げている衝撃的なグリーン"
                    class="w-full h-auto object-cover rounded-lg"
                    loading="lazy"
                    width={1200}
                    height={900}
                    format="webp"
                    quality={80}
                />
            </figure>

            <div class="voice-box">
                <div class="voice-icon">
                    <Image
                        src="https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/author.png"
                        alt="筆者アイコン"
                        class="w-16 h-16 rounded-full"
                        width={64}
                        height={64}
                        format="webp"
                        quality={80}
                    />
                </div>
                <div class="voice-text">
                    <p><strong>「…禿げていますね」</strong></p>
                    <p>
                        思わず声が漏れました。まるで、近所の公園の芝生です。ボールを置いてみると、その凸凹具合が足元から伝わってきます。
                    </p>
                </div>
            </div>

            <div class="voice-box">
                <div class="voice-icon">
                    <Image
                        src="https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/author.png"
                        alt="筆者アイコン"
                        class="w-16 h-16 rounded-full"
                        width={64}
                        height={64}
                        format="webp"
                        quality={80}
                    />
                </div>
                <div class="voice-text">
                    <p><strong>「え…？」</strong></p>
                    <p>
                        気を取り直して打った最初のパットは、数メートル先で不自然にブレーキ。アンジュレーションなんてレベルじゃありません。あまりの衝撃的な打ちにくさに、ただ笑うしかありませんでした。
                    </p>
                </div>
            </div>

            <p>
                そして、伝説は4番ホール（だったと思います）で起きました。ティーショットは見事1オンしたものの、そこからまさかの5パット。バーディーチャンスが一瞬にしてトリプルボギーへと変わってしまいました。
            </p>
            <figure class="my-6">
                <Image
                    src="https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/adogawa_sc/gallery/IMG_8778.png"
                    alt="年季の入ったティーマット"
                    class="w-full h-auto object-cover rounded-lg"
                    loading="lazy"
                    width={1200}
                    height={900}
                    format="webp"
                    quality={80}
                />
            </figure>
            <p>
                このコース最大の魅力は「一日回り放題」であること。そして、お盆にも関わらず、そこまで混雑していません。他のお客さんの邪魔にならない限り、反復練習が許される暗黙の了解がここにはあったのです。
            </p>
            <p>
                私は残りのラウンドを、全てアプローチ練習に切り替えました。特にハマっているロブショットを、ラフから、フェアウェイから、様々なライから納得いくまで打ち続ける。打ちっぱなしでは決して味わえない、リアルな芝からの実践練習です。スコアを気にしないゴルフが、こんなに楽しいなんて。
            </p>

            <h2
                id="section-4"
                class="scroll-mt-24 text-2xl md:text-3xl font-bold text-slate-800 mt-12 mb-4"
            >
                家族で一日中楽しめる<span class="br-mobile"><br /></span
                >ショートコース
            </h2>
            <p>
                そして、もう一つの大きな発見がありました。この場所は、家族の誰もが楽しめる最高のレジャー施設だということです。
            </p>
            <figure class="my-6">
                <Image
                    src="https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/adogawa_sc/gallery/IMG_8721.png"
                    alt="大人用と子供用のレンタルクラブ"
                    class="w-full h-auto object-cover rounded-lg"
                    loading="lazy"
                    width={1200}
                    height={900}
                    format="webp"
                    quality={80}
                />
            </figure>
            <p>
                私が練習に没頭している間、妻は涼しいクラブハウスで読書をしながらリラックス。子どもたちは、支配人から見える1番ホールを使い、「お客さんが来たらどいてね」というお許しのもと、何時間もゴルフを楽しんでいました。
            </p>
            <p>
                午前中はコースで遊び、昼は併設のレストランで食事をし、午後はまたコースに戻る。父親は本気の練習ができ、子どもたちは大自然の中で思い切り遊べます。レンタルクラブも無料だから、手ぶらで来ても大丈夫。<strong
                    >一般（3,000円）とジュニア2人（500円×2）のご家族なら4,000円で一日中遊べます。</strong
                >これは最高の休日の過ごし方ではないでしょうか。
            </p>
            <div
                class="not-prose my-6 p-4 bg-gray-100 border border-gray-200 rounded-lg text-center"
            >
                <p class="font-bold text-slate-800 m-0">
                    💡
                    打ちっぱなし練習場を含む、より詳しい料金体系は下記の記事でまとめています！
                </p>
                <a
                    href="/articles/adogawa-sc-review/range/"
                    class="mt-2 inline-block text-green-700 font-semibold hover:underline"
                >
                    → 料金まとめ記事を確認する
                </a>
            </div>
            <p>
                正直に申し上げます。「整備されたショートコース」を期待して行くと、3,000円は高いと感じるでしょう。あなたもきっと、私のように最初のグリーンで絶望するはずです。
            </p>
            <p>
                しかし、もしあなたがこの記事を読んで、「なるほど、そういう場所か」と理解した上で訪れるなら、話は全く別です。
            </p>
            <p>
                ここは、スコアを競う場所ではありません。<strong
                    >様々なライからアプローチをとことん練習し、時には家族と笑い合い、一日中ゴルフというスポーツそのものを満喫する場所</strong
                >です。その価値が分かった時、3,000円は驚くほど安い投資に変わるでしょう。
            </p>

            <div
                class="not-prose my-12 p-6 bg-green-50 border border-green-200 rounded-lg"
            >
                <h3 class="text-xl font-bold text-green-800 mb-3">
                    あわせて読みたい：安曇川スポーツセンター<br
                        class="md:hidden"
                    />練習場レビュー
                </h3>
                <p class="text-green-900">
