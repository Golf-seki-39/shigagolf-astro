            "priceRange": rangeData?.priceRange || "500円〜2,000円", // ★修正点②
            "address": {
              "@type": "PostalAddress",
              "streetAddress": rangeData?.address,
              "addressLocality": rangeData?.city || "近江八幡市", // ★修正点③
              "addressRegion": "滋賀県",
              "postalCode": rangeData?.postalCode, // ★修正点（メイン）
              "addressCountry": "JP"
            }
        },
        "reviewRating": {
            "@type": "Rating",
            "ratingValue": rangeData?.avgRating ? parseFloat(rangeData.avgRating).toFixed(1) : "0",
