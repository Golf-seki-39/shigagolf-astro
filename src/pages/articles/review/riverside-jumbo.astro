    {/* ★★★ ここから料金シミュレーターの完全なJSコード ★★★ */}
    <script define:vars={{ priceData }}>
    document.addEventListener('DOMContentLoaded', () => {
        const simulator = document.getElementById('price-simulator');
        if (!simulator) return;

        // シミュレーター要素の取得
        const step1 = simulator.querySelector('#step-1');
        const step2 = simulator.querySelector('#step-2');
        const step3 = simulator.querySelector('#step-3');
        const resetButton = simulator.querySelector('#reset-button');
        const membershipRadios = simulator.querySelectorAll('input[name="membership"]');
        const timeRadios = simulator.querySelectorAll('input[name="time"]');
        const ballCountSlider = simulator.querySelector('#ball-count');
        const ballCountDisplay = simulator.querySelector('#ball-count-display');
        const totalPriceDisplay = simulator.querySelector('#total-price');

        // 料金計算関数
        function calculatePrice() {
            const membershipRadio = simulator.querySelector('input[name="membership"]:checked');
            const timeRadio = simulator.querySelector('input[name="time"]:checked');
            const balls = parseInt(ballCountSlider.value);

            ballCountDisplay.textContent = `${balls}球`; // 球数を表示

            // いずれかの選択肢が未選択の場合は計算せずにプレースホルダーを表示
            if (!membershipRadio || !timeRadio) {
                totalPriceDisplay.textContent = '----';
                return;
            }

            const membership = membershipRadio.value;
            const time = timeRadio.value;
            const entryFee = priceData.entryFee[membership]; // 会員か非会員かで入場料を取得

            let ballPrice;
            // 料金体系に基づいて球単価を決定
            if (time === 'ladiesDay') {
                ballPrice = priceData.ballPrice.ladiesDay;
            } else if (membership === 'member' && time === 'weekend') {
                // 会員かつ週末の場合のみ専用の料金を使用
                ballPrice = priceData.memberWeekendPrice;
            } else {
                // それ以外は通常料金
                ballPrice = priceData.ballPrice[time];
            }

            // 合計金額を計算して表示
            const total = entryFee + (ballPrice * balls);
            totalPriceDisplay.textContent = total.toLocaleString(); // カンマ区切りで表示
        }

        // モバイル表示かどうかを判定する関数
        const isMobile = () => window.innerWidth < 768; // mdブレークポイント

        // モバイルでステップを進める関数
        function goToStep(stepToShow) {
            if (!isMobile()) return; // モバイルでなければ何もしない

            // 全ステップを一旦隠す
            step1.classList.add('hidden');
            step2.classList.add('hidden');
            step3.classList.add('hidden');

            // 対象のステップを表示し、リセットボタンを表示
            stepToShow.classList.remove('hidden');
            resetButton.classList.remove('hidden');
        }

        // シミュレーターをリセットする関数
        function resetSimulator() {
            // ラジオボタンの選択を全て解除
            membershipRadios.forEach(radio => radio.checked = false);
            timeRadios.forEach(radio => radio.checked = false);

            // 球数スライダーを初期値に戻す
            ballCountSlider.value = 150;

            // モバイル表示の場合、ステップ1に戻しリセットボタンを隠す
            if (isMobile()) {
                step1.classList.remove('hidden');
                step2.classList.add('hidden');
                step3.classList.add('hidden');
                resetButton.classList.add('hidden');
            }

            // 価格表示を更新（'----'に戻る）
            calculatePrice();
        }

        // イベントリスナーを設定する関数
        function setupListeners() {
            membershipRadios.forEach(radio => {
                // changeイベントで発火（クリック確定時）
                radio.addEventListener('change', () => {
                    calculatePrice(); // 価格を再計算
                    if (isMobile()) {
                        goToStep(step2); // モバイルならステップ2へ
                    }
                });
            });

            timeRadios.forEach(radio => {
                // changeイベントで発火
                radio.addEventListener('change', () => {
                    calculatePrice(); // 価格を再計算
                    if (isMobile()) {
                        goToStep(step3); // モバイルならステップ3へ
                    }
                });
            });

            // スライダーが動いたらリアルタイムで価格を再計算
            ballCountSlider.addEventListener('input', calculatePrice);
            // リセットボタンがクリックされたらリセット関数を実行
            resetButton.addEventListener('click', resetSimulator);
        }

        // 初期表示を調整する関数
        function initializeView() {
            if (isMobile()) {
                // モバイルならステップ2, 3とリセットボタンを隠す
                step2.classList.add('hidden');
                step3.classList.add('hidden');
                resetButton.classList.add('hidden');
                step1.classList.remove('hidden'); // ステップ1を表示
            } else {
                // PCなら全ステップを表示
                step1.classList.remove('hidden');
                step2.classList.remove('hidden');
                step3.classList.remove('hidden');
                resetButton.classList.add('hidden'); // PCではリセットボタンは常に非表示
            }
        }

        // --- 初期化処理 ---
        initializeView(); // 表示を初期化
        setupListeners(); // イベントリスナーを設定
        calculatePrice(); // 初期価格を表示（通常は '----'）

        // --- ウィンドウリサイズ時の処理 ---
        let resizeTimer;
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimer); // リサイズ中のイベント発火を間引く
            resizeTimer = setTimeout(() => {
                // 画面サイズが変わったら状態をリセットして再描画
                resetSimulator();
                initializeView();
            }, 250); // 250ms待ってから実行
        });
    });
    </script>
