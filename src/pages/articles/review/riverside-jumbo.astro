    "@type": "Review",
    "itemReviewed": {
        "@type": "SportsActivityLocation",
        "name": "リバーサイドジャンボゴルフ",
        "address": {
            "@type": "PostalAddress",
            "streetAddress": rangeData?.address,
            "addressLocality": rangeData?.city || "東近江市",
            "addressRegion": "滋賀県",
            "postalCode": rangeData?.postalCode,
            "addressCountry": "JP"
        },
        "telephone": rangeData?.phone,
        "image": rangeData?.imageUrl || imageUrl,
        "priceRange": rangeData?.priceRange || "1000円〜3000円",
        "url": articleUrl
    },
    "author": { "@type": "Person", "name": "関＠シガゴル管理人" },
    "reviewBody": description,
    "reviewRating": {
        "@type": "Rating",
        "ratingValue": rangeData?.avgRating ? parseFloat(rangeData.avgRating).toFixed(1) : "5",
        "bestRating": "5"
