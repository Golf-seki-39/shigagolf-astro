import BaseLayout from "../../../layouts/BaseLayout.astro";
import { db } from "../../../lib/firebase.js";
import { doc, getDoc } from "firebase/firestore";

// --- この記事固有の情報 ---
const title = "【滋賀・徹底比較】近江八幡・東近江のゴルフ練習場5選｜アプローチ＆バンカー練習ができるのはここ！ | シガゴル";
const description = "「アプローチ練習ができる場所は？」「バンカー練習に集中できるのはどこ？」近江八幡・東近江エリアの全5施設をシガゴル運営者が実際に訪問して徹底調査。あなたに合った練習場が必ず見つかります。";
const articlePubDate = "2025-09-27";
const pubDateISO = "2025-09-27T10:00:00+09:00";
const imageUrl = "https://i.imgur.com/jOTBh4U.jpeg";
const headline = title.split(" | ")[0];

// --- Firebaseから各練習場の情報を取得 ---
const rangeIds = ['riverside_jumbo', 'sakura_gc', 'greenpia_oh', 'azuchi_gc', 'garage_park'];
const appId = import.meta.env.PUBLIC_FIREBASE_APP_ID;

const rangePromises = rangeIds.map(id => {
    const docPath = `artifacts/${appId}/public/data/practice_ranges/${id}`;
    const docRef = doc(db, docPath);
    return getDoc(docRef);
});

const rangeDocs = await Promise.all(rangePromises);

const rangesData = rangeDocs.reduce((acc, docSnap, index) => {
    if (docSnap.exists()) {
        acc[rangeIds[index]] = docSnap.data();
    } else {
        console.error(`Error: No document found for rangeId: ${rangeIds[index]}`);
        acc[rangeIds[index]] = null;
    }
    return acc;
}, {});

// 各練習場のデータを変数に格納
const riverside = rangesData.riverside_jumbo;
const sakura = rangesData.sakura_gc;
const greenpia = rangesData.greenpia_oh;
const azuchi = rangesData.azuchi_gc;
const garage = rangesData.garage_park;

// --- 構造化データ(JSON-LD)の生成 ---
const itemListElements = rangeIds.map((id, index) => {
    const range = rangesData[id];
    if (!range) return null;
    return {
        "@type": "ListItem",
        "position": index + 1,
        "item": {
            "@type": "SportsActivityLocation",
            "name": range.name,
            "address": {
                "@type": "PostalAddress",
                "streetAddress": range.address,
                "addressLocality": range.city,
                "addressRegion": "滋賀県",
                "postalCode": range.postalCode,
                "addressCountry": "JP"
            },
            "telephone": range.phone,
            "url": `https://shigagolf.com/ranges/${id}/`
        }
    };
}).filter(Boolean);
