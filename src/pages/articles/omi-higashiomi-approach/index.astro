import BaseLayout from "../../../layouts/BaseLayout.astro";
import { db } from "../../../lib/firebase.js";
import { doc, getDoc } from "firebase/firestore";
// [修正点1] AstroのImageコンポーネントをインポート
import { Image } from "astro:assets";

// --- 共通コンポーネント ---
import MySlider from '../../../components/MySlider.astro';
import ShareButtons from '../../../components/ShareButtons.astro';
import AuthorProfile from '../../../components/AuthorProfile.astro';

// --- この記事固有の情報 ---
const baseUrl = "https://shigolf.com";
const articleUrl = `${baseUrl}/articles/omi-higashiomi-approach/`;
const publicationDate = "2025-09-27";
const lastModified = new Date();

const title = "【滋賀・徹底比較】近江八幡・東近江のゴルフ練習場5選｜アプローチ＆バンカー練習ができるのはここ！ | シガゴル";
const description = "近江八幡・東近江エリアの全5施設を実際に訪問調査。アプローチ練習場やバンカー打席を徹底比較し、あなたのレベルや目的に合った練習環境を紹介します。";
const category = "比較記事"; 
const headline = "近江八幡・東近江のゴルフ練習場5選｜アプローチ＆バンカー徹底比較";
const imageUrl = "https://i.imgur.com/jOTBh4U.jpeg";

// --- Firebaseから各練習場の情報を取得 ---
const rangeIds = ['riverside_jumbo', 'sakura_gc', 'greenpia_oh', 'azuchi_gc', 'garage_park'];
const appId = import.meta.env.PUBLIC_FIREBASE_APP_ID;
const rangePromises = rangeIds.map(id => getDoc(doc(db, `artifacts/${appId}/public/data/practice_ranges/${id}`)));
const rangeDocs = await Promise.all(rangePromises);

const rangesData = rangeDocs.reduce((acc, docSnap, index) => {
    if (docSnap.exists()) { acc[rangeIds[index]] = docSnap.data(); } 
    else { acc[rangeIds[index]] = null; }
    return acc;
}, {});

// --- 早見表のデータをループ処理用に整理 ---
const summaryConfig = [
    { id: 'riverside_jumbo', city: '東近江市', approach: { symbol: '◎', text: '(約50yd)', label: '評価: 二重丸' }, bunker: { symbol: '◎', label: '評価: 二重丸'}, feature: '<span class="whitespace-nowrap">芝の管理が圧倒的。</span><br /><span class="whitespace-nowrap">実践的な練習環境。</span>', recommend: '本気でスコアを求める中〜上級者' },
    { id: 'sakura_gc',       city: '東近江市', approach: { symbol: '◯', text: '(約60yd)', label: '評価: 丸' }, bunker: { symbol: '◯', label: '評価: 丸'}, feature: '<span class="whitespace-nowrap">女性無料！</span><br /><span class="whitespace-nowrap">広くて開放的な練習エリア。</span>', recommend: '女性、コスパ重視のゴルファー' },
    { id: 'greenpia_oh',     city: '近江八幡市', approach: { symbol: '◯', text: '(約20yd)', label: '評価: 丸' }, bunker: { symbol: '◯', label: '評価: 丸'}, feature: '<span class="whitespace-nowrap">人目につきにくい、</span><br /><span class="whitespace-nowrap">初心者向け穴場。</span>', recommend: '初心者、こっそり練習したい人' },
    { id: 'azuchi_gc',       city: '近江八幡市', approach: { symbol: '×', text: '', label: '評価: 不可' }, bunker: { symbol: '◯', label: '評価: 丸'}, feature: '<span class="whitespace-nowrap">打席利用者は無料で</span><br /><span class="whitespace-nowrap">バンカー練習が可能。</span>', recommend: 'バンカーが苦手な人' },
    { id: 'garage_park',     city: '東近江市', approach: { symbol: '×', text: '(インドア)', label: '評価: 不可' }, bunker: { symbol: '×', label: '評価: 不可'}, feature: '<span class="whitespace-nowrap">弾道測定器でデータを</span><br /><span class="whitespace-nowrap">元にした練習が可能。</span>', recommend: 'データ派、天候を気にせず練習したい人' }
];
const summaryData = summaryConfig.map(item => ({
    ...item,
    name: rangesData[item.id]?.name || '練習場名'
}));

// --- 各施設のアイキャッチ画像URLを定義 ---
const rangeImages = {
    azuchi_gc: 'https://i.imgur.com/LSkRor1.jpeg',
    garage_park: 'https://i.imgur.com/0rkZCzV.jpeg',
    riverside_jumbo: 'https://i.imgur.com/jAuddU2.jpeg',
    sakura_gc: 'https://i.imgur.com/nMH3jlD.png',
    greenpia_oh: 'https://i.imgur.com/ki7elev.png'
};

// --- Article Body Images ---
const bodyImages = {
    riverside_jumbo_1: "https://i.imgur.com/Zmub1Dn.jpeg",
    riverside_jumbo_2: "https://i.imgur.com/XPz9zeH.jpeg",
    riverside_jumbo_3: "https://i.imgur.com/yXxbsTu.jpeg",
    sakura_gc_1: "https://i.imgur.com/SMDA2hS.png",
    sakura_gc_2: "https://i.imgur.com/TNUPBdk.png",
    sakura_gc_3: "https://i.imgur.com/vcbiMO7.png",
    greenpia_oh_1: "https://i.imgur.com/TXXAJEo.jpeg",
    greenpia_oh_2: "https://i.imgur.com/NjWzRzC.png",
    greenpia_oh_3: "https://i.imgur.com/zt0CxX9.png",
    azuchi_gc_1: "https://i.imgur.com/sLV8cIE.jpeg",
    azuchi_gc_2: "https://i.imgur.com/CJaVyC3.jpeg",
    garage_park_1: "https://i.imgur.com/KqgvACX.png",
};


// --- 構造化データ(JSON-LD)の生成 ---
const itemListElements = rangeIds.map((id, index) => {
    const range = rangesData[id];
    if (!range) return null;
    const openingHours = range.business_hours_structured?.map(item => ({
        "@type": "OpeningHoursSpecification", "dayOfWeek": item.dayOfWeek, "opens": item.opens, "closes": item.closes
    }));
    return {
        "@type": "ListItem", "position": index + 1,
        "item": {
            "@type": "SportsActivityLocation", "name": range.name, "url": `${baseUrl}/ranges/${id}/`, 
            "image": rangeImages[id],
            "telephone": range.phone, "priceRange": range.priceRange || "¥1000-¥3000",
            "address": { "@type": "PostalAddress", "streetAddress": range.address, "addressLocality": range.city, "addressRegion": "滋賀県", "postalCode": range.postalCode, "addressCountry": "JP" },
            "geo": { "@type": "GeoCoordinates", "latitude": range.lat, "longitude": range.lng },
            "openingHoursSpecification": openingHours,
        }
    };
}).filter(Boolean);

const faqElements = {
    "@type": "FAQPage",
    "mainEntity": [
        { "@type": "Question", "name": "ゴルフ練習場のアプローチエリアで効果的に練習する方法は？", "acceptedAnswer": { "@type": "Answer", "text": "効果的な練習には3つのポイントがあります。まず、10ヤード、30ヤード、50ヤードなど、具体的な距離を決めて打ち分ける練習を繰り返します。次に、もしフェアウェイやラフなど複数のライがあれば、それぞれの状況から打つことで実戦感覚を養います。最後に、スイングの大きさや力感を変えず、一定のリズムで打つことを意識すると安定性が増します。" } },
        { "@type": "Question", "name": "バンカーショットが苦手です。どんな練習をすればいいですか？", "acceptedAnswer": { "@type": "Answer", "text": "バンカーショットの基本は、ボールを直接打つのではなく、手前の砂を爆発させる「エクスプロージョンショット」です。練習場では、ボールの3cmほど手前に線を引いて、その線ごと砂を飛ばすイメージで繰り返しスイングしましょう。フェースを開き、スタンスを少しオープンに構えるのが基本です。まずはボールを出すことを目標に、砂をしっかり叩く感覚を掴むことが重要です。" } }
    ]
};

// --- 関連記事リスト ---
const experienceReports = [
    { url: '/articles/azuchi-review/', title: '安土ゴルフクラブ 体験レポート', img: 'https://i.imgur.com/cJBj7Sh.png' },
    { url: '/articles/sakura-gc-review/', title: 'さくらゴルフ倶楽部 体験レポート', img: 'https://i.imgur.com/DqJ7aMO.png' },
    { url: '/articles/garege-park-review/', title: 'がれーじぱーく東近江 体験レポート', img: 'https://i.imgur.com/TQmlJFb.jpeg' },
    { url: '/articles/review/greenpia-oh/', title: 'グリーンピア近江八幡ゴルフ 体験レポート', img: 'https://i.imgur.com/KIm1JOr.jpeg' },
];
const comparisonArticles = [
    { url: '/articles/comparison/omi-priceRank/', title: '【料金で徹底比較】近江八幡・東近江の安い練習場5選', img: 'https://i.imgur.com/DOzSbMV.jpeg' },
    { url: '/articles/comparison/higashiomi-guide/', title: '【2025年最新】東近江市のゴルフ練習場まとめ｜全3施設を料金・設備で徹底比較', img: 'https://i.imgur.com/1sT2kzY.jpeg' },
    { url: '/articles/comparison/omi-putting/', title: '【パター練習場が充実】近江八幡・東近江エリア4選', img: 'https://i.imgur.com/IJZwf4W.jpeg' },
    { url: '/articles/omi-higashiomi-approach/', title: '【アプローチ＆バンカー練習場】近江八幡・東近江5選', img: 'https://i.imgur.com/jOTBh4U.jpeg' },
    { url: '/articles/comparison/omi-lesson/', title: '【レッスン比較】近江八幡・東近江の初心者向け4選', img: 'https://i.imgur.com/XXlXJbL.jpeg' },
    { url: '/articles/omi-higashiomi-comparison/', title: '【総合比較】近江八幡・東近江エリアのゴルフ練習場4選', img: 'https://i.imgur.com/DyVr8of.jpeg' },
];

const gmapsApiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;
---
<BaseLayout title={title} description={description} pubDate={publicationDate} ogImage={imageUrl}>

    <script slot="head" type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BlogPosting",
        "mainEntityOfPage": { "@type": "WebPage", "@id": articleUrl },
        "headline": headline, "description": description, 
        // [修正点4] 記事内の全画像を追加
        "image": [ imageUrl, ...Object.values(bodyImages) ],
        "author": { "@type": "Person", "name": "関（せき）", "url": `${baseUrl}/about/`, "image": "https://i.imgur.com/BOcMOf3.png" },
        "publisher": { "@type": "Organization", "name": "シガゴル", "logo": { 
            "@type": "ImageObject", 
            "url": "https://i.imgur.com/mN0IbPS.png",
            "width": 600,
            "height": 60
        }},
        "datePublished": new Date(publicationDate).toISOString(),
        "dateModified": lastModified.toISOString(),
        "hasPart": { "@type": "ItemList", "itemListElement": itemListElements },
        "mainEntity": faqElements,
        "about": [ { "@type": "Thing", "name": "ゴルフ アプローチ練習" }, { "@type": "Thing", "name": "ゴルフ バンカー練習" }, { "@type": "Thing", "name": "滋賀 ゴルフ練習場" } ]
    })} />

    <div id="article-view" class="view bg-white p-6 md:p-8 rounded-lg shadow-lg max-w-4xl mx-auto">
        <a href="/articles/" class="nav-link back-button mb-6 text-green-700 font-semibold hover:underline">
            ‹ お役立ち記事一覧に戻る
        </a>
        <article class="prose lg:prose-xl max-w-none text-slate-700 leading-relaxed">
            <style>
              html { scroll-behavior: smooth; }
              section[id] { scroll-margin-top: 80px; }
              .cta-icon { width: 1.2em; height: 1.2em; margin-right: 0.5em; vertical-align: text-bottom; }
            </style>
            
            <header>
                <h1 class="text-3xl md:text-4xl font-bold text-slate-800">{title.split(" | ")[0]}</h1>
                <p class="text-sm text-slate-500 mt-2">最終更新日：{lastModified.getFullYear()}-{String(lastModified.getMonth() + 1).padStart(2, '0')}-{String(lastModified.getDate()).padStart(2, '0')}</p>
            </header>
            
            <Image src={imageUrl} alt="滋賀県のゴルフ練習場でアプローチ練習をするゴルファー" class="w-full h-auto object-cover rounded-lg my-6" loading="eager" width={1200} height={800} fetchpriority="high" format="webp" quality={80} />

            <div class="not-prose bg-blue-50 p-4 my-6 rounded-lg border border-l-4 border-blue-500">
                <p class="font-bold text-slate-800 text-lg">結論：本格的な練習なら<a href="#riverside-jumbo" class="text-green-700 hover:underline">リバーサイドジャンボゴルフ</a>、コスパ重視なら<a href="#sakura-gc" class="text-green-700 hover:underline">さくらゴルフ倶楽部</a>がおすすめです。</p>
                <p class="text-slate-700 m-0">この記事では、各練習場のショートゲーム環境をランキング形式で詳しく解説します。</p>
            </div>

            <p>「練習場では快音を響かせるドライバー。でも、なぜかスコアは縮まらない…」</p>
            <p>多くのゴルファーが抱えるこの悩みの原因は、スコアの約7割を占めると言われる100ヤード以内のショートゲームにあるのかもしれません。</p>
            
            <div class="toc-container bg-slate-50 p-6 rounded-lg border border-slate-200 my-8 not-prose">
                <h2 class="text-xl font-bold mb-4 text-slate-800">この記事の目次</h2>
                <ul class="space-y-2 list-disc list-inside">
                    <li><a href="#summary-table" class="text-green-700 hover:underline">結論から！ショートゲーム環境 早見表</a></li>
                    <li><a href="#top3-ranking" class="text-green-700 hover:underline">【目的別】おすすめ練習場ランキング TOP3</a>
                        <ul class="pl-6 mt-2 space-y-1 list-disc list-inside">
                            <li><a href="#riverside-jumbo" class="text-slate-600 hover:underline">1. 本格派向け：リバーサイドジャンボゴルフ</a></li>
                            <li><a href="#sakura-gc" class="text-slate-600 hover:underline">2. 女性・コスパ重視派向け：さくらゴルフ倶楽部</a></li>
                            <li><a href="#greenpia-oh" class="text-slate-600 hover:underline">3. 初心者向け：グリーンピア近江八幡ゴルフ</a></li>
                        </ul>
                    </li>
                    <li><a href="#azuchi-gc" class="text-green-700 hover:underline">番外編：バンカー練習特化なら安土ゴルフクラブ</a></li>
                    <li><a href="#garage-park" class="text-green-700 hover:underline">雨の日・データ派向け：がれーじぱーく東近江</a></li>
                    <li><a href="#faq" class="text-green-700 hover:underline">アプローチ・バンカー練習のよくある質問</a></li>
                    <li><a href="#conclusion" class="text-green-700 hover:underline">まとめ</a></li>
                    <li><a href="#info-summary" class="text-green-700 hover:underline">各施設の基本情報まとめ</a></li>
                </ul>
            </div>
            
            <div class="not-prose bg-slate-50 p-4 my-6 rounded-lg border border-l-4 border-green-600">
                <p class="font-bold text-slate-800 m-0">この記事は、シガゴル運営者が実際に近江八幡・東近江エリアの全5施設に足を運んで執筆しています。</p>
            </div>

            <p>普段の練習マットの上からでは決して養えない、本番のコースに近い芝からの距離感や打感。これを磨くことこそ、100切り、90切りへの一番の近道です。</p>
            <p>「近江八幡でアプローチ練習ができる場所はないかな？」</p>
            <p>「東近江でバンカー練習に集中できるゴルフ練習場はどこだろう？」</p>
            <p>この記事では、そんなあなたの疑問に答えるべく、あなたのレベルや目的に合った最高の練習環境を提案します。</p>

            <h2 id="summary-table" class="text-2xl font-bold mt-8 pt-4 border-t border-slate-200 scroll-mt-24">結論から！近江八幡・東近江のショートゲーム環境 早見表</h2>
            <p>忙しいあなたのために、まずは各練習場の特徴を一覧でまとめました。</p>
            
            <div class="overflow-x-auto my-4 not-prose hidden md:block">
                 <table class="w-full text-sm text-left border border-slate-300 min-w-[800px]">
                    <thead class="bg-slate-50">
                        <tr>
                            <th scope="col" class="px-4 py-3 border border-slate-300 align-middle text-center whitespace-nowrap text-base font-semibold normal-case">練習場名</th>
                            <th scope="col" class="px-4 py-3 border border-slate-300 text-center">アプローチ</th>
                            <th scope="col" class="px-4 py-3 border border-slate-300 text-center">バンカー</th>
                            <th scope="col" class="px-4 py-3 border border-slate-300 text-center">最大の特徴</th>
                            <th scope="col" class="px-4 py-3 border border-slate-300 text-center">こんな人におすすめ</th>
                        </tr>
                    </thead>
                    <tbody>
                        {summaryData.map((item, index) => (
                            <tr class={(index % 2 !== 0) ? 'bg-slate-50 border-b' : 'bg-white border-b'}>
                                <td class="px-4 py-2 border align-middle">
                                    <a href={`/ranges/${item.id}/`} class="text-blue-600 hover:underline">
                                        <span class="whitespace-nowrap">{item.name}</span>
                                        <br />
                                        <span class="text-xs text-slate-500">({item.city})</span>
                                    </a>
                                </td>
                                <td class="px-4 py-2 border text-center align-middle" aria-label={item.approach.label}>
                                    {item.approach.symbol}
                                    {item.approach.text && <><br/><span class="text-xs">{item.approach.text}</span></>}
                                </td>
                                <td class="px-4 py-2 border text-center align-middle" aria-label={item.bunker.label}>
                                    {item.bunker.symbol}
                                </td>
                                <td class="px-4 py-2 border text-center align-middle" set:html={item.feature} />
                                <td class="px-4 py-2 border align-middle">{item.recommend}</td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>

            <div class="space-y-4 my-4 not-prose md:hidden">
                {summaryData.map(item => (
                    <div class="border rounded-lg p-4">
                        <h3 class="text-lg font-bold m-0"><a href={`/ranges/${item.id}/`} class="text-blue-600 hover:underline">{item.name}</a></h3>
                        <p class="text-sm text-slate-500 m-0">{item.city}</p>
                        <table class="w-full mt-2 text-sm"><tbody>
                            <tr>
                                <td class="font-semibold pr-2 py-1 w-1/3">アプローチ</td>
                                <td class="py-1" aria-label={`アプローチ ${item.approach.label}`}>{item.approach.symbol} {item.approach.text}</td>
                            </tr>
                            <tr>
                                <td class="font-semibold pr-2 py-1">バンカー</td>
                                <td class="py-1" aria-label={`バンカー ${item.bunker.label}`}>{item.bunker.symbol}</td>
                            </tr>
                            <tr><td class="font-semibold pr-2 py-1 align-top">特徴</td><td class="py-1" set:html={item.feature.replace(/<br\s*\/?>/g, ' ')} /></tr>
                            <tr><td class="font-semibold pr-2 py-1 align-top">おすすめ</td><td class="py-1">{item.recommend}</td></tr>
                        </tbody></table>
                    </div>
                ))}
            </div>

            <h2 id="top3-ranking" class="text-2xl font-bold mt-8 pt-4 border-t border-slate-200 scroll-mt-24">【目的別】近江八幡・東近江のおすすめアプローチ練習場TOP3</h2>
