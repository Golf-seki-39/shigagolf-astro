const gmapsApiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;
---

<BaseLayout
    title={title}
    description={description}
    pubDate={new Date(publicationDate).toISOString()}
    ogImage={imageUrl}
>
    <script
        slot="head"
        type="application/ld+json"
        set:html={JSON.stringify(mainEntity)}
    />
    <script
        slot="head"
        type="application/ld+json"
        set:html={JSON.stringify(faqElements)}
    />

    <div
        id="article-view"
        class="view bg-white p-6 md:p-8 rounded-lg shadow-lg max-w-4xl mx-auto"
    >
        <a
            href="/articles/"
            class="nav-link back-button mb-6 text-green-700 font-semibold hover:underline"
        >
            ‹ お役立ち記事一覧に戻る
        </a>
        <article
            class="prose lg:prose-xl max-w-none text-slate-700 leading-relaxed"
        >
            <style is:global>
                html {
                    scroll-behavior: smooth;
                }
                section[id] {
                    scroll-margin-top: 80px;
                }
                .cta-icon {
                    width: 1.2em;
                    height: 1.2em;
                    margin-right: 0.5em;
                    vertical-align: text-bottom;
                }
                .table-wrapper {
                    overflow-x: auto;
                }
                .min-w-table-pc {
                    min-width: 600px;
                }
                .table-wrapper th:first-child,
                .table-wrapper td:first-child {
                    position: -webkit-sticky;
                    position: sticky;
                    left: 0;
                    z-index: 10;
                }
                .table-wrapper thead th:first-child {
                    background-color: #f1f5f9;
                }
                .table-wrapper tbody tr.bg-white td:first-child {
                    background-color: #ffffff;
                }
                .table-wrapper tbody tr.bg-slate-50 td:first-child {
                    background-color: #f8fafc;
                }

                @media (max-width: 767px) and (orientation: portrait) {
                    #article-view .responsive-table {
                        min-width: 100% !important;
                    }
                    #article-view .responsive-table thead {
                        display: none !important;
                    }
                    #article-view .responsive-table tr {
                        display: block !important;
                        margin-bottom: 1.5rem !important;
                        border: 1px solid #cbd5e1 !important;
                        border-radius: 0.5rem !important;
                        box-shadow:
                            0 1px 3px 0 rgb(0 0 0 / 0.1),
                            0 1px 2px -1px rgb(0 0 0 / 0.1) !important;
                        overflow: hidden;
                    }
                    #article-view .responsive-table td {
                        display: block !important;
                        text-align: right !important;
                        position: relative !important;
                        border-bottom: 1px solid #e2e8f0 !important;
                        padding: 0.75rem 0.75rem 0.75rem 130px !important;
                        left: auto !important;
                        background-color: #fff !important;
                    }
                    #article-view .responsive-table td:last-child {
                        border-bottom: none !important;
                    }
                    #article-view .responsive-table td::before {
                        content: attr(data-label);
                        position: absolute;
                        left: 0.75rem;
                        top: 50%;
                        transform: translateY(-50%);
                        font-weight: 600;
                        text-align: left;
                        color: #475569;
                        width: 110px;
                    }
                    #article-view .responsive-table td:first-child {
                        background-color: #f1f5f9 !important;
                        font-weight: bold !important;
                        text-align: center !important;
                        padding-left: 0.75rem !important;
                    }
                    #article-view .responsive-table td:first-child::before {
                        content: "" !important;
                    }

                    #article-view .show-table-view.table-wrapper {
                        overflow-x: auto !important;
                    }
                    #article-view .show-table-view .responsive-table {
                        min-width: 600px !important;
                    }
                    #article-view .show-table-view .responsive-table thead {
                        display: table-header-group !important;
                    }
                    #article-view .show-table-view .responsive-table tr {
                        display: table-row !important;
                        border: none !important;
                        box-shadow: none !important;
                    }
                    #article-view .show-table-view .responsive-table td {
                        display: table-cell !important;
                        border: 1px solid #cbd5e1 !important;
                        padding: 0.5rem !important;
                        position: static !important;
                        text-align: center !important;
                    }
                    #article-view
                        .show-table-view
                        .responsive-table
                        td:first-child {
                        text-align: left !important;
                        position: sticky !important;
                        left: 0 !important;
                    }
                    #article-view
                        .show-table-view
                        .responsive-table
                        td::before {
                        content: none !important;
                    }
                    #article-view .show-table-view tr.bg-slate-50 td {
                        background-color: #f8fafc !important;
                    }
                    #article-view .show-table-view tr.bg-white td {
                        background-color: #fff !important;
                    }
                    #article-view .show-table-view thead th {
                        background-color: #f1f5f9 !important;
                    }
                }
            </style>

            <header>
                <h1 class="text-3xl md:text-4xl font-bold text-slate-800">
                    {headline}
                </h1>
                <p class="text-sm text-slate-500 mt-2">
                    最終更新日：{lastModified.getFullYear()}-{
                        String(lastModified.getMonth() + 1).padStart(2, "0")
                    }-{String(lastModified.getDate()).padStart(2, "0")}
                </p>
            </header>

            <Image
                src="https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/シガゴル (14).jpg"
                alt="東近江市のゴルフ練習場3施設の魅力的な風景コラージュ"
                class="w-full h-auto object-cover rounded-lg my-6"
                loading="eager"
                width={1200}
                height={675}
                fetchpriority="high"
                decoding="async"
                format="webp"
                quality={80}
            />

            <div
                class="not-prose bg-green-50 border border-l-4 border-green-500 p-4 rounded-lg my-6"
            >
                <h4 class="text-lg font-bold text-green-800 mb-2 mt-0">
                    あなたにおすすめの選び方
                </h4>
                <ul class="list-disc list-inside text-slate-700 m-0 p-0">
                    <li class="mb-1">
                        コスパ重視 → <a
                            href="#sakura_gc"
                            class="text-green-700 hover:underline font-semibold"
                            >さくらゴルフ倶楽部</a>
                    </li>
                    <li class="mb-1">
                        通い放題がいい → <a
                            href="#garage_park"
                            class="text-green-700 hover:underline font-semibold"
                            >がれーじぱーく東近江</a>
                    </li>
                    <li>
                        環境と設備重視 → <a
                            href="#riverside_jumbo"
                            class="text-green-700 hover:underline font-semibold"
                            >リバーサイドジャンボゴルフ</a>
                    </li>
                </ul>
            </div>

            <p>
                東近江市でゴルフ練習場を探しているあなたへ。<br
                />「リバーサイドとさくら、結局どっちがいいの？」...<br
                />そんな悩みをこの記事一本で解決します。
            </p>
            <p>
                はじめまして、滋賀県在住で「シガゴル」運営者の関です。<strong
                    >私自身が東近江市の全3施設（リバーサイド、がれーじぱーく、さくら）をすべて体験した</strong
                >上で、その疑問に本音でお答えします。
            </p>
            <p>
                この記事では、料金の安さだけでなく、アプローチ設備、練習環境の快適さまで、<strong
                    >現地ライターの目線</strong
                >で徹底的に比較します。
            </p>
            <p>
                あなたの目的やライフスタイルに<strong>”完璧に”</strong
                >マッチする練習場が、必ず見つかります。さあ、東近江市最強のゴルフ練習場まとめの始まりです。
            </p>

            <div
                class="toc-container bg-slate-50 p-6 rounded-lg border border-slate-200 my-8 not-prose"
            >
                <h2 class="text-xl font-bold mb-4 text-slate-800">
                    この記事の目次
                </h2>
                <ul class="space-y-2 list-disc list-inside">
                    <li>
                        <a
                            href="#summary-table"
                            class="text-green-700 hover:underline"
                            >【総合比較】東近江市のゴルフ練習場3施設</a>
                    </li>
                    <li>
                        <a
                            href="#review-details"
                            class="text-green-700 hover:underline"
                            >東近江市のゴルフ練習場3施設を個別レビュー</a>
                    </li>
                    <li>
                        <a
                            href="#access-info"
                            class="text-green-700 hover:underline"
                            >【アクセス・営業時間】東近江市の練習場の行きやすさ比較</a>
                    </li>
                    <li>
                        <a
                            href="#price-comparison"
                            class="text-green-700 hover:underline"
                            >【料金徹底比較】あなたのスタイルに合う最安練習場は？</a>
                    </li>
                    <li>
                        <a
                            href="#more-info"
                            class="text-green-700 hover:underline"
                            >【目的別】さらに深掘り！東近江のゴルフ練習場ガイド</a>
                    </li>
                    <li>
                        <a
                            href="#conclusion"
                            class="text-green-700 hover:underline"
                            >【結論】あなたの目的別・おすすめ練習場診断</a>
                    </li>
                    <li>
                        <a
                            href="#info-summary"
                            class="text-green-700 hover:underline"
                            >各施設の基本情報まとめ</a>
                    </li>
                </ul>
            </div>

            <section id="summary-table">
                <h2
                    class="text-2xl font-bold mt-8 pt-4 border-t border-slate-200"
                >
                    【総合比較】東近江市のゴルフ練習場3施設を徹底比較｜料金・設備・アクセスまとめ
                </h2>
                <p>
                    まずは全体像を把握しましょう。料金だけでなく、打席数やヤード数、駐車場の広さまで一目で比較できます。
                </p>

                <div class="not-prose my-4 text-center">
                    <button
                        class="view-toggle-btn md:hidden inline-flex items-center justify-center bg-slate-600 text-white font-semibold py-2 px-4 rounded-lg shadow hover:bg-slate-700 transition-colors duration-200 text-sm"
                        data-target-id="summary-table-container"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5 mr-2"
                            viewBox="0 0 20 20"
                            fill="currentColor"
                            ><path
                                fill-rule="evenodd"
                                d="M15.707 15.707a1 1 0 01-1.414 0l-5-5a1 1 0 010-1.414l5-5a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 010 1.414zm-6 0a1 1 0 01-1.414 0l-5-5a1 1 0 010-1.414l5-5a1 1 0 011.414 1.414L5.414 10l4.293 4.293a1 1 0 010 1.414z"
                                clip-rule="evenodd"></path></svg
                        >
                        画面を横にして一覧表で見る
                    </button>
                </div>
                <div
                    id="summary-table-container"
                    class="table-wrapper my-4 not-prose"
                >
                    <table
                        class="w-full text-sm text-left border border-slate-300 min-w-table-pc responsive-table"
                    >
                        <thead class="bg-slate-100">
                            <tr>
                                <th
                                    class="px-4 py-3 border border-slate-300 align-middle text-center whitespace-nowrap"
                                    >練習場名</th
                                >
                                <th
                                    class="px-4 py-3 border border-slate-300 align-middle text-center whitespace-nowrap"
                                    >打席/ヤード</th
                                >
