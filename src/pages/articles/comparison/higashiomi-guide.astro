---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { db } from "../../../lib/firebase.js";
import { doc, getDoc } from "firebase/firestore";
import { Image } from "astro:assets";

// --- 共通コンポーネント ---
import MySlider from "../../../components/MySlider.astro";
import ShareButtons from "../../../components/ShareButtons.astro";
import AuthorProfile from "../../../components/AuthorProfile.astro";
import VoiceBox from "../../../components/VoiceBox.astro";

// --- この記事固有の情報 ---
const baseUrl = "https://shigolf.com";
const articleUrl = `${baseUrl}/articles/comparison/higashiomi-guide/`;
const publicationDate = "2025-10-16";
const lastModified = new Date();

// --- SEOコピー ---
const title =
    "【滋賀・東近江市】ゴルフ練習場おすすめ3選！料金、アプローチ、選び方を現地ライターが徹底比較 | シガゴル";
const description =
    "東近江市のゴルフ練習場3選を現地ライターが本音レビュー。「リバーサイド」と「さくら」どっち？通い放題「がれーじぱーく」は？あなたの最適解がわかります。";
const category = "比較記事";
const headline =
    "【滋賀・東近江市】ゴルフ練習場おすすめ3選！料金、アプローチ、選び方を現地ライターが徹底比較";
const imageUrl =
    "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/シガゴル (14).jpg";

// --- Firebaseから各練習場の情報を取得 ---
const rangeIds = ["riverside_jumbo", "garage_park", "sakura_gc"];
const appId = import.meta.env.PUBLIC_FIREBASE_APP_ID;
const rangePromises = rangeIds.map((id) =>
    getDoc(doc(db, `artifacts/${appId}/public/data/practice_ranges/${id}`)),
);
const rangeDocs = await Promise.all(rangePromises);

const rangesData = rangeDocs.reduce((acc, docSnap, index) => {
    if (docSnap.exists()) {
        acc[rangeIds[index]] = docSnap.data();
    } else {
        acc[rangeIds[index]] = null;
    }
    return acc;
}, {});

// --- 各施設の追加情報 ---
const additionalData = {
    sakura_gc: {
        reviewUrl: "/articles/sakura-gc-review/",
    },
    riverside_jumbo: {
        reviewUrl: "/articles/review/riverside-jumbo/",
    },
    garage_park: {
        reviewUrl: "/articles/garege-park-review/",
    },
};

// --- JSON-LD構造化データ ---
const mainEntity = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    mainEntityOfPage: { "@type": "WebPage", "@id": articleUrl },
    headline: headline,
    description: description,
    image: [
        imageUrl,
        "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/riverside_jumbo/gallery/IMG_6450 2.jpg",
        "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/garage_park/gallery/IMG_9502.png",
        "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/sakura_gc/gallery/IMG_9788.png",
    ],
    author: {
        "@type": "Person",
        name: "関（シガゴル運営者）",
        url: `${baseUrl}/about/`,
    },
    publisher: {
        "@type": "Organization",
        name: "シガゴル",
        logo: {
            "@type": "ImageObject",
            url: "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/logo.png",
        },
    },
    datePublished: new Date(publicationDate).toISOString(),
    dateModified: lastModified.toISOString(),
