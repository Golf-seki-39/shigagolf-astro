---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { db } from "../../../lib/firebase.js";
import { doc, getDoc } from "firebase/firestore";
import { Image } from "astro:assets";

// --- 共通コンポーネント ---
import MySlider from '../../../components/MySlider.astro';
import ShareButtons from '../../../components/ShareButtons.astro';
import AuthorProfile from '../../../components/AuthorProfile.astro';

// --- この記事固有の情報 ---
const baseUrl = "https://shigolf.com";
const articleUrl = `${baseUrl}/articles/comparison/higashiomi-summary/`;
const publicationDate = new Date();
const lastModified = new Date();

// --- SEOコピー ---
const title = "【2025年最新】東近江市のゴルフ練習場まとめ｜全3施設を料金・設備で徹底比較 | シガゴル";
const description = "東近江市のゴルフ練習場選びで迷っていませんか？全3施設を料金・設備・特徴で徹底比較。とにかく安く打ちたい、アプローチ練習をしたい、女性や初心者でも安心な練習場はどこか、あなたの目的にぴったりの練習場が必ず見つかります。";
const category = "比較記事";
const headline = "【2025年最新】東近江市のゴルフ練習場まとめ｜全3施設を料金・設備で徹底比較";
const imageUrl = "https://i.imgur.com/1sT2kzY.jpeg";

// --- Firebaseから各練習場の情報を取得 ---
const rangeIds = ['riverside_jumbo', 'garage_park', 'sakura_gc'];
const appId = import.meta.env.PUBLIC_FIREBASE_APP_ID;
const rangePromises = rangeIds.map(id => getDoc(doc(db, `artifacts/${appId}/public/data/practice_ranges/${id}`)));
const rangeDocs = await Promise.all(rangePromises);

const rangesData = rangeDocs.reduce((acc, docSnap, index) => {
    if (docSnap.exists()) { acc[rangeIds[index]] = docSnap.data(); }
    else { acc[rangeIds[index]] = null; }
    return acc;
}, {});

// --- 各施設の追加情報 ---
const additionalData = {
    sakura_gc: {
        reviewUrl: '/articles/sakura-gc-review/',
    },
    riverside_jumbo: {
        reviewUrl: null,
    },
    garage_park: {
        reviewUrl: '/articles/garege-park-review/',
    }
};

// --- JSON-LD構造化データ ---
const mainEntity = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "mainEntityOfPage": { "@type": "WebPage", "@id": articleUrl },
    "headline": headline, "description": description,
    "image": [
        imageUrl,
        "https://i.imgur.com/UNYudh2.jpeg",
        "https://i.imgur.com/l96uWba.jpeg",
        "https://i.imgur.com/XK51XXc.jpeg"
    ],
    "author": { "@type": "Person", "name": "関（シガゴル運営者）", "url": `${baseUrl}/about/` },
    "publisher": { "@type": "Organization", "name": "シガゴル", "logo": { "@type": "ImageObject", "url": "https://i.imgur.com/mN0IbPS.png" }},
    "datePublished": publicationDate.toISOString(), "dateModified": lastModified.toISOString()
};

const faqElements = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "@id": articleUrl + "#faq",
  "mainEntity": [
    { "@type": "Question", "name": "東近江市で一番安いゴルフ練習場はどこですか？", "acceptedAnswer": { "@type": "Answer", "text": "100球程度の練習であれば、平日・休日ともに「さくらゴルフ倶楽部」が最も安くなる可能性が高いです。ただし、練習頻度が高い場合は月額5,000円で通い放題の「がれーじぱーく東近江」が圧倒的にお得になります。" } },
    { "@type": "Question", "name": "東近江市で女性や初心者におすすめのゴルフ練習場は？", "acceptedAnswer": { "@type": "Answer", "text": "「さくらゴルフ倶楽部」がおすすめです。入場料無料などの女性・ジュニア特典が非常に充実しており、初心者優先打席も完備されています。" } }
  ]
};

// --- 全記事共通の「関連記事リスト」を定義 ---
const experienceReports = [
    { url: '/articles/sakura-gc-review/', title: 'さくらゴルフ倶楽部 体験レポート', img: 'https://i.imgur.com/nMH3jlD.png' },
    { url: '/articles/garege-park-review/', title: 'がれーじぱーく東近江 体験レポート', img: 'https://i.imgur.com/0rkZCzV.jpeg' },
    { url: '/articles/azuchi-review/', title: '安土ゴルフクラブ 体験レポート', img: 'https://i.imgur.com/LSkRor1.jpeg' },
];
const comparisonArticles = [
    { url: '/articles/comparison/omi-pricerank/', title: '【料金で徹底比較】近江八幡・東近江の安い練習場5選', img: 'https://i.imgur.com/DOzSbMV.jpeg' },
    { url: '/articles/comparison/omi-putting/', title: '【パター練習場が充実】近江八幡・東近江エリア4選', img: 'https://i.imgur.com/IJZwf4W.jpeg' },
    { url: '/articles/omi-higashiomi-approach/', title: '【アプローチ＆バンカー練習場】近江八幡・東近江5選', img: 'https://i.imgur.com/jOTBh4U.jpeg' },
    { url: '/articles/omi-higashiomi-comparison/', title: '【総合比較】近江八幡・東近江エリアのゴルフ練習場4選', img: 'https://i.imgur.com/DyVr8of.jpeg' },
    { url: '/articles/comparison/omi-lesson/', title: '【レッスン比較】近江八幡・東近江の初心者向け4選', img: 'https://i.imgur.com/XXlXJbL.jpeg' },
];

const gmapsApiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;
---

<BaseLayout title={title} description={description} pubDate={publicationDate.toISOString()} ogImage={imageUrl}>
    <script slot="head" type="application/ld+json" set:html={JSON.stringify(mainEntity)} />
    <script slot="head" type="application/ld+json" set:html={JSON.stringify(faqElements)} />

    <div id="article-view" class="view bg-white p-6 md:p-8 rounded-lg shadow-lg max-w-4xl mx-auto">
        <a href="/articles/" class="nav-link back-button mb-6 text-green-700 font-semibold hover:underline">
            ‹ お役立ち記事一覧に戻る
        </a>
        <article class="prose lg:prose-xl max-w-none text-slate-700 leading-relaxed">
            <style is:global>
              html { scroll-behavior: smooth; }
              section[id] { scroll-margin-top: 80px; }
              .cta-icon { width: 1.2em; height: 1.2em; margin-right: 0.5em; vertical-align: text-bottom; }
              .table-wrapper { overflow-x: auto; }
              .min-w-table-pc { min-width: 600px; }
              .table-wrapper th:first-child, .table-wrapper td:first-child { position: -webkit-sticky; position: sticky; left: 0; z-index: 10; }
              .table-wrapper thead th:first-child { background-color: #f1f5f9; }
              .table-wrapper tbody tr.bg-white td:first-child { background-color: #ffffff; }
              .table-wrapper tbody tr.bg-slate-50 td:first-child { background-color: #f8fafc; }
            
              @media (max-width: 767px) and (orientation: portrait) {
                #article-view .responsive-table {
                    min-width: 100% !important;
                }
                #article-view .responsive-table thead { display: none !important; }
                #article-view .responsive-table tr { display: block !important; margin-bottom: 1.5rem !important; border: 1px solid #cbd5e1 !important; border-radius: 0.5rem !important; box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1) !important; overflow: hidden; }
                #article-view .responsive-table td { display: block !important; text-align: right !important; position: relative !important; border-bottom: 1px solid #e2e8f0 !important; padding: 0.75rem 0.75rem 0.75rem 130px !important; left: auto !important; background-color: #fff !important; }
                #article-view .responsive-table td:last-child { border-bottom: none !important; }
                #article-view .responsive-table td::before { content: attr(data-label); position: absolute; left: 0.75rem; top: 50%; transform: translateY(-50%); font-weight: 600; text-align: left; color: #475569; width: 110px; }
                #article-view .responsive-table td:first-child { background-color: #f1f5f9 !important; font-weight: bold !important; text-align: center !important; padding-left: 0.75rem !important; }
                #article-view .responsive-table td:first-child::before { content: '' !important; }
              
                #article-view .show-table-view.table-wrapper {
                    overflow-x: auto !important;
                }
                #article-view .show-table-view .responsive-table {
                    min-width: 600px !important;
                }
                #article-view .show-table-view .responsive-table thead { display: table-header-group !important; }
                #article-view .show-table-view .responsive-table tr { display: table-row !important; border: none !important; box-shadow: none !important; }
                #article-view .show-table-view .responsive-table td { display: table-cell !important; border: 1px solid #cbd5e1 !important; padding: 0.5rem !important; position: static !important; text-align: center !important; }
                #article-view .show-table-view .responsive-table td:first-child { text-align: left !important; position: sticky !important; left: 0 !important; }
                #article-view .show-table-view .responsive-table td::before { content: none !important; }
                #article-view .show-table-view tr.bg-slate-50 td { background-color: #f8fafc !important; }
                #article-view .show-table-view tr.bg-white td { background-color: #fff !important; }
                #article-view .show-table-view thead th { background-color: #f1f5f9 !important; }
              }
            </style>
            
            <header>
                <h1 class="text-3xl md:text-4xl font-bold text-slate-800">{headline}</h1>
                <p class="text-sm text-slate-500 mt-2">最終更新日：{lastModified.getFullYear()}-{String(lastModified.getMonth() + 1).padStart(2, '0')}-{String(lastModified.getDate()).padStart(2, '0')}</p>
            </header>

            <Image src="https://i.imgur.com/1sT2kzY.jpeg" alt="東近江市のゴルフ練習場3施設の魅力的な風景コラージュ" class="w-full h-auto object-cover rounded-lg my-6" loading="eager" width={1200} height={675} fetchpriority="high" decoding="async" format="webp" quality={80} />

            <div class="not-prose bg-green-50 border border-l-4 border-green-500 p-4 rounded-lg my-6">
              <h4 class="text-lg font-bold text-green-800 mb-2 mt-0">あなたにおすすめの選び方</h4>
              <ul class="list-disc list-inside text-slate-700 m-0 p-0">
                <li class="mb-1">コスパ重視 → <a href="#sakura_gc" class="text-green-700 hover:underline font-semibold">さくらゴルフ倶楽部</a></li>
                <li class="mb-1">通い放題がいい → <a href="#garage_park" class="text-green-700 hover:underline font-semibold">がれーじぱーく東近江</a></li>
                <li>環境と設備重視 → <a href="#riverside_jumbo" class="text-green-700 hover:underline font-semibold">リバーサイドジャンボゴルフ</a></li>
              </ul>
            </div>

            <p>東近江市でゴルフ練習場を探しているあなたへ。「結局、自分に合う練習場はどこ…？」そんな悩みをこの記事一本で解決します。</p>
            <p>この記事では、東近江市内にある全3施設のゴルフ練習場を、<strong>料金の安さ</strong>はもちろん、<strong>アプローチやバンカーなどの設備</strong>、<strong>練習環境の快適さ</strong>まで、あらゆる角度から徹底的に比較。</p>
            <p>あなたの目的やライフスタイルに<strong>”完璧に”</strong>マッチする練習場が、必ず見つかります。さあ、東近江市最強のゴルフ練習場まとめの始まりです。</p>

            <div class="toc-container bg-slate-50 p-6 rounded-lg border border-slate-200 my-8 not-prose">
                <h2 class="text-xl font-bold mb-4 text-slate-800">この記事の目次</h2>
                <ul class="space-y-2 list-disc list-inside">
                    <li><a href="#summary-table" class="text-green-700 hover:underline">【総合比較】東近江市のゴルフ練習場3施設</a></li>
                    <li><a href="#review-details" class="text-green-700 hover:underline">東近江市のゴルフ練習場3施設を個別レビュー</a></li>
                    <li><a href="#access-info" class="text-green-700 hover:underline">【アクセス・営業時間】東近江市の練習場の行きやすさ比較</a></li>
                    <li><a href="#price-comparison" class="text-green-700 hover:underline">【料金徹底比較】あなたのスタイルに合う最安練習場は？</a></li>
                    <li><a href="#more-info" class="text-green-700 hover:underline">【目的別】さらに深掘り！東近江のゴルフ練習場ガイド</a></li>
                    <li><a href="#conclusion" class="text-green-700 hover:underline">【結論】あなたの目的別・おすすめ練習場診断</a></li>
                    <li><a href="#info-summary" class="text-green-700 hover:underline">各施設の基本情報まとめ</a></li>
                </ul>
            </div>

            <section id="summary-table">
                <h2 class="text-2xl font-bold mt-8 pt-4 border-t border-slate-200">【総合比較】東近江市のゴルフ練習場3施設を徹底比較｜料金・設備・アクセスまとめ</h2>
                <p>まずは全体像を把握しましょう。料金だけでなく、打席数やヤード数、駐車場の広さまで一目で比較できます。</p>

                 <div class="not-prose my-4 text-center">
                    <button class="view-toggle-btn md:hidden inline-flex items-center justify-center bg-slate-600 text-white font-semibold py-2 px-4 rounded-lg shadow hover:bg-slate-700 transition-colors duration-200 text-sm" data-target-id="summary-table-container">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M15.707 15.707a1 1 0 01-1.414 0l-5-5a1 1 0 010-1.414l5-5a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 010 1.414zm-6 0a1 1 0 01-1.414 0l-5-5a1 1 0 010-1.414l5-5a1 1 0 011.414 1.414L5.414 10l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"></path></svg>
                        画面を横にして一覧表で見る
                    </button>
                 </div>
                 <div id="summary-table-container" class="table-wrapper my-4 not-prose">
                    <table class="w-full text-sm text-left border border-slate-300 min-w-table-pc responsive-table">
                        <thead class="bg-slate-100">
                            <tr>
                                <th class="px-4 py-3 border border-slate-300 align-middle text-center whitespace-nowrap">練習場名</th>
                                <th class="px-4 py-3 border border-slate-300 align-middle text-center whitespace-nowrap">打席/ヤード</th>
                                <th class="px-4 py-3 border border-slate-300 text-center whitespace-nowrap">駐車場(目安)</th>
                                <th class="px-4 py-3 border border-slate-300 text-center whitespace-nowrap">料金体系</th>
                                <th class="px-4 py-3 border border-slate-300 text-center whitespace-nowrap">打放題</th>
                                <th class="px-4 py-3 border border-slate-300 text-center">特徴</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="bg-white">
                                <td data-label="練習場名" class="px-4 py-2 border align-middle font-semibold whitespace-nowrap"><a href="#riverside_jumbo" class="text-blue-600 hover:underline">リバーサイドジャンボゴルフ</a></td>
                                <td data-label="打席/ヤード" class="px-4 py-2 border text-center align-middle whitespace-nowrap">60席/230yd</td>
                                <td data-label="駐車場" class="px-4 py-2 border text-center align-middle whitespace-nowrap">約40台</td>
                                <td data-label="料金体系" class="px-4 py-2 border text-center align-middle">球貸し</td>
                                <td data-label="打放題" class="px-4 py-2 border text-center align-middle"><strong>なし</strong></td>
                                <td data-label="特徴" class="px-4 py-2 border align-middle text-xs">2025年6月に<strong>打席周り</strong>リニューアル</td>
                            </tr>
                            <tr class="bg-slate-50">
                                <td data-label="練習場名" class="px-4 py-2 border align-middle font-semibold whitespace-nowrap"><a href="#garage_park" class="text-blue-600 hover:underline">がれーじぱーく東近江</a></td>
                                <td data-label="打席/ヤード" class="px-4 py-2 border text-center align-middle whitespace-nowrap">1席/インドア</td>
                                <td data-label="駐車場" class="px-4 py-2 border text-center align-middle whitespace-nowrap">約20台</td>
                                <td data-label="料金体系" class="px-4 py-2 border text-center align-middle"><strong>時間制</strong></td>
                                <td data-label="打放題" class="px-4 py-2 border text-center align-middle"><strong>◯</strong></td>
                                <td data-label="特徴" class="px-4 py-2 border align-middle text-xs">インドア。大型扇風機あり</td>
                            </tr>
                            <tr class="bg-white">
                                <td data-label="練習場名" class="px-4 py-2 border align-middle font-semibold whitespace-nowrap"><a href="#sakura_gc" class="text-blue-600 hover:underline">さくらゴルフ倶楽部</a></td>
                                <td data-label="打席/ヤード" class="px-4 py-2 border text-center align-middle whitespace-nowrap">72席/230yd</td>
                                <td data-label="駐車場" class="px-4 py-2 border text-center align-middle whitespace-nowrap">約50台</td>
                                <td data-label="料金体系" class="px-4 py-2 border text-center align-middle">球貸し</td>
                                <td data-label="打放題" class="px-4 py-2 border text-center align-middle"><strong>◯</strong></td>
                                <td data-label="特徴" class="px-4 py-2 border align-middle text-xs">冷房が快適。一部駐車しにくい箇所あり</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>

            <section id="review-details">
                <h2 class="text-2xl font-bold mt-8 pt-4 border-t border-slate-200">東近江市のゴルフ練習場3施設を個別レビュー</h2>
                 <div id="riverside_jumbo" class="mt-8 pt-6 scroll-mt-24">
                     <h3 class="text-2xl font-bold text-slate-800 mt-0">リバーサイドジャンボゴルフ</h3>
                     <Image src="https://i.imgur.com/UNYudh2.jpeg" alt="リバーサイドジャンボゴルフの広大なフェアウェイ" class="w-full h-auto object-cover rounded-lg my-4" loading="lazy" width={1200} height={675} decoding="async" format="webp" quality={80} />
                     <h4 class="text-xl font-semibold text-slate-600">「質」を求める本気ゴルファーの聖地</h4>
                     <p>「安さ」よりも「練習の質」を徹底的に追求するゴルファーが集うのが、このリバーサイドジャンボゴルフです。無料で利用できる本格的なパターグリーンや、質の高い（会員限定有料）アプローチ練習場は、スコアアップへの投資価値十分。</p>
                     <Image src="https://i.imgur.com/Kd7anY2.jpeg" alt="リバーサイドジャンボゴルフの手入れが行き届いた綺麗なパターグリーン" class="w-full h-auto object-cover rounded-lg my-4" loading="lazy" width={1200} height={800} decoding="async" format="webp" quality={80} />
                     <p>2025年6月に打席周りがリニューアルされ、夏場はミストも出るなど、快適性もさらに向上しています。</p>
                     <div class="not-prose text-center my-6">
                         <a href="/ranges/riverside_jumbo/" class="nav-link inline-flex items-center justify-center bg-green-700 text-white font-bold py-3 px-6 rounded-lg shadow-md hover:bg-green-800 transition-colors duration-200 text-base no-underline">
                            <svg class="cta-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M4 21V9.975L12 3L20 9.975V21H14V14H10V21H4Z"></path></svg>
                             この練習場の施設詳細ページへ
                         </a>
                     </div>
                 </div>
                 <div id="garage_park" class="mt-12 pt-6 border-t border-slate-200 scroll-mt-24">
                     <h3 class="text-2xl font-bold text-slate-800 mt-0">がれーじぱーく東近江</h3>
                     <Image src="https://i.imgur.com/l96uWba.jpeg" alt="がれーじぱーく東近江のインドア練習ブース" class="w-full h-auto object-cover rounded-lg my-4" loading="lazy" width={1200} height={675} decoding="async" format="webp" quality={80} />
                     <h4 class="text-xl font-semibold text-slate-600">データと効率を重視する現代ゴルファーの秘密基地</h4>
                     <p>蒲生スマートICからわずか2分という抜群のアクセスを誇る、完全インドア練習場。天候を一切気にすることなく、弾道測定器が示す詳細なデータに基づいて、どこまでも効率的にご自身のスイングと向き合えます。</p>
                     <Image src="https://i.imgur.com/faG0Y9m.jpeg" alt="がれーじぱーく東近江の弾道測定器の画面" class="w-full h-auto object-cover rounded-lg my-4" loading="lazy" width={1200} height={800} decoding="async" format="webp" quality={80} />
                     <p>特に、月額5,000円のフリーパスは、練習頻度が高いゴルファーにとってまさに”最強”の選択肢です。</p>
