import BaseLayout from "../../../layouts/BaseLayout.astro";
import { db } from "../../../lib/firebase.js";
import { doc, getDoc } from "firebase/firestore";

// --- この記事固有の情報 ---
const baseUrl = "https://shigagolf.com";
const articleUrl = `${baseUrl}/articles/comparison/omi-putting/`;
const publicationDate = "2025-09-29";
const lastModified = new Date(); 

const title = "【滋賀・徹底比較】パター練習が充実しているゴルフ練習場5選｜近江八幡・東近江エリア | シガゴル";
const description = "近江八幡・東近江エリアの全5施設のゴルフ練習場を実地調査！スコアメイクの鍵を握るパター練習場の環境を徹底比較。本格グリーンから、屋内で快適に練習できる穴場まで、あなたの目的に合った練習場が必ず見つかります。";
const headline = "【滋賀】パター練習が本当に充実しているゴルフ練習場は？近江八幡・東近江エリア5選";
const imageUrl = "https://i.imgur.com/IJZwf4W.jpeg";

// --- Firebaseから各練習場の情報を取得 ---
const rangeIds = ['riverside_jumbo', 'greenpia_oh', 'sakura_gc', 'garage_park', 'azuchi_gc'];
const appId = import.meta.env.PUBLIC_FIREBASE_APP_ID;
const rangePromises = rangeIds.map(id => getDoc(doc(db, `artifacts/${appId}/public/data/practice_ranges/${id}`)));
const rangeDocs = await Promise.all(rangePromises);

const rangesData = rangeDocs.reduce((acc, docSnap, index) => {
    if (docSnap.exists()) { acc[rangeIds[index]] = docSnap.data(); } 
    else { acc[rangeIds[index]] = null; }
    return acc;
}, {});

// --- 構造化データ用に各施設の画像を定義 ---
const rangeImages = {
    riverside_jumbo: "https://i.imgur.com/5HIvgij.jpeg",
    greenpia_oh: "https://i.imgur.com/28znno9.png",
    sakura_gc: "https://i.imgur.com/e2uTCqP.png",
    garage_park: "https://i.imgur.com/s9GafmA.jpeg",
    azuchi_gc: "https://i.imgur.com/xBrBYhE.jpeg"
};

// --- 早見表のデータをループ処理用に整理 ---
const summaryConfig = [
    { id: 'riverside_jumbo', location: '半屋外', evaluation: { symbol: '◎', label: '評価: 特に優れている'}, feature: '<span class="whitespace-nowrap">起伏のある本格グリーン。</span><br /><span class="whitespace-nowrap">雨天・夜間もOK。</span>', fee: '無料' },
    { id: 'greenpia_oh',     location: '屋内',   evaluation: { symbol: '◯', label: '評価: 良い'}, feature: '<span class="whitespace-nowrap">広く清潔な屋内グリーン。</span><br /><span class="whitespace-nowrap">ただし注意点も。</span>', fee: '<span class="whitespace-nowrap">打席利用者</span><br />無料' },
    { id: 'sakura_gc',       location: '屋内',   evaluation: { symbol: '△', label: '評価: 簡易的'}, feature: '<span class="whitespace-nowrap">複数タイプの練習器具が置かれ、</span><br /><span class="whitespace-nowrap">手軽に試せる。</span>', fee: '<span class="whitespace-nowrap">打席利用者</span><br />無料' },
    { id: 'garage_park',     location: '屋内',   evaluation: { symbol: '△', label: '評価: 簡易的'}, feature: '<span class="whitespace-nowrap">DIY感のあるエリア。</span><br /><span class="whitespace-nowrap">速く、少し凸凹した個性派。</span>', fee: '<span class="whitespace-nowrap">打席利用者</span><br />無料' },
    { id: 'azuchi_gc',       location: '屋内',   evaluation: { symbol: '△', label: '評価: 簡易的'}, feature: '<span class="whitespace-nowrap">受付裏の簡易マット。</span><br /><span class="whitespace-nowrap">ストローク確認に。</span>', fee: '無料' }
];
const summaryData = summaryConfig.map(item => ({
    ...item,
    name: rangesData[item.id]?.name || '練習場名',
    city: rangesData[item.id]?.city || ''
}));

// --- 構造化データ(JSON-LD)の生成 ---
const itemListElements = rangeIds.map((id, index) => {
    const range = rangesData[id];
    if (!range) return null;
    const openingHours = range.business_hours_structured?.map(item => ({
        "@type": "OpeningHoursSpecification", "dayOfWeek": item.dayOfWeek, "opens": item.opens, "closes": item.closes
    }));
    return {
        "@type": "ListItem", "position": index + 1,
        "item": {
            "@type": "SportsActivityLocation", "name": range.name, "url": `${baseUrl}/ranges/${id}/`, 
            "image": rangeImages[id],
            "telephone": range.phone, "priceRange": range.priceRange || "¥1000-¥3000",
            "address": { "@type": "PostalAddress", "streetAddress": range.address, "addressLocality": range.city, "addressRegion": "滋賀県", "postalCode": range.postalCode, "addressCountry": "JP" },
            "geo": { "@type": "GeoCoordinates", "latitude": range.lat, "longitude": range.lng },
            "openingHoursSpecification": openingHours,
        }
    };
}).filter(Boolean);

const faqElements = {
    "@type": "FAQPage",
    "mainEntity": [
        {
            "@type": "Question",
            "name": "ゴルフ練習場のパターグリーンで効果的に練習する方法は？",
            "acceptedAnswer": {
                "@type": "Answer",
                "text": "効果的な練習には3つのポイントがあります。まず、10m以上のロングパットで距離感を養います。次に、1m程度のショートパットを繰り返し、正確なストロークを固めます。最後に、傾斜のあるラインでボールがどう曲がるかを確認し、実戦的な感覚を磨くことが重要です。"
            }
        },
        {
            "@type": "Question",
            "name": "雨の日でもパター練習ができる近江八幡・東近江のゴルフ練習場はどこですか？",
            "acceptedAnswer": {
                "@type": "Answer",
                "text": "はい、この記事で紹介しているゴルフ練習場の多くは雨天でも利用可能です。特に「リバーサイドジャンボゴルフ」は屋根付きの本格的なグリーン、「グリーンピア近江八幡ゴルフ」は広々とした完全屋内グリーンを備えており、天候を気にせず集中して練習できます。その他の施設も屋内に簡易的な練習スペースがあります。"
            }
        }
    ]
};

const gmapsApiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;
