            </div>

            <div class="space-y-4 my-4 not-prose md:hidden">
                {summaryData.map(item => (
                    <div class="border rounded-lg p-4">
                        <h3 class="text-lg font-bold m-0"><a href={`${baseUrl}/ranges/${item.id}/`} class="text-blue-600 hover:underline">{item.name}</a></h3>
                        <p class="text-sm text-slate-500 m-0">{item.city}</p>
