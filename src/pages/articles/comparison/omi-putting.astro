---
import BaseLayout from "../../../layouts/BaseLayout.astro";

// --- この記事固有の情報 ---
const baseUrl = "https://shigagolf.com";
const articleUrl = `${baseUrl}/articles/comparison/omi-putting/`;
const title = "【滋賀・徹底比較】パター練習が本当に充実しているゴルフ練習場は？近江八幡・東近江エリア5選 | シガゴル";
const description = "近江八幡・東近江エリアの全5施設を実地調査！スコアメイクの鍵を握るパター練習場の環境を徹底比較。本格グリーンから、屋内で快適に練習できる穴場まで、あなたの目的に合った練習場が必ず見つかります。";
const pubDate = "2025-09-29";
const headline = "【滋賀・徹底比較】パター練習が本当に充実しているゴルフ練習場は？";
const imageUrl = "https://i.imgur.com/IJZwf4W.jpeg";

// --- 早見表のデータ ---
const summaryData = [
    { id: 'riverside_jumbo', name: 'リバーサイドジャンボゴルフ', location: '半屋外', evaluation: '◎', feature: '起伏のある本格グリーン。雨天・夜間もOK。', fee: '無料' },
    { id: 'greenpia_oh', name: 'グリーンピア近江八幡', location: '屋内', evaluation: '◯', feature: '広く清潔な屋内グリーン。ただし注意点も。', fee: '打席利用者無料' },
    { id: 'sakura_gc', name: 'さくらゴルフ倶楽部', location: '屋内', evaluation: '△', feature: '複数タイプの練習器具が置かれ、手軽に試せる。', fee: '利用者無料' },
    { id: 'garage_park', name: 'がれーじぱーく東近江', location: '屋内', evaluation: '△', feature: 'DIY感のあるエリア。速く、少し凸凹した個性派。', fee: '打席利用者無料' },
    { id: 'azuchi_gc', name: '安土ゴルフクラブ', location: '屋内', evaluation: '△', feature: '受付裏の簡易マット。ストローク確認に。', fee: '無料' }
];

// --- 施設基本情報データ ---
const rangesInfo = {
    riverside_jumbo: { name: "リバーサイドジャンボゴルフ", address: "滋賀県東近江市小脇町150", phone: "0748-22-7788", hours: "平日 9:00-22:00 / 土日祝 8:00-22:00" },
    greenpia_oh: { name: "グリーンピア近江八幡", address: "滋賀県近江八幡市池田町5丁目21-2", phone: "0748-36-8171", hours: "9:00-21:00" },
    sakura_gc: { name: "さくらゴルフ倶楽部", address: "滋賀県東近江市建部日吉町230", phone: "0748-23-7772", hours: "平日 9:00-21:30 / 土日祝 8:00-21:30" },
    garage_park: { name: "がれーじぱーく東近江", address: "滋賀県東近江市東沖野3-3-18", phone: "090-4299-1969", hours: "24時間営業" },
    azuchi_gc: { name: "安土ゴルフクラブ", address: "滋賀県近江八幡市安土町上豊浦1733", phone: "0748-46-6080", hours: "9:00-21:00" }
};

const gmapsApiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;

---
<BaseLayout title={title} description={description} pubDate={pubDate}>
    <div class="bg-white p-6 md:p-8 rounded-lg shadow-lg max-w-4xl mx-auto">
        <article class="prose lg:prose-xl max-w-none text-slate-700 leading-relaxed">
            {/* ... (記事ヘッダー、アイキャッチ画像、導入文は省略) ... */}
            <h1 class="text-3xl md:text-4xl font-bold text-slate-800">【滋賀・徹底比較】パター練習が本当に充実しているゴルフ練習場は？近江八幡・東近江エリア5選</h1>
            <p>（導入文...）</p>

            <h2 class="text-2xl md:text-3xl font-bold text-slate-800 mt-12 mb-4">結論から！近江八幡・東近江のパター練習環境 早見表</h2>
            
            {/* --- 早見表ここから --- */}
            {/* PC向けテーブル表示 */}
            <div class="overflow-x-auto my-4 not-prose hidden md:block">
                <table class="w-full text-sm text-left border border-slate-300 min-w-[700px]">
                    <thead class="bg-slate-50">
                        <tr>
                            <th scope="col" class="px-4 py-3 border">練習場名</th>
                            <th scope="col" class="px-4 py-3 border text-center">場所</th>
                            <th scope="col" class="px-4 py-3 border text-center">環境評価</th>
                            <th scope="col" class="px-4 py-3 border">特徴</th>
                            <th scope="col" class="px-4 py-3 border">料金</th>
                        </tr>
                    </thead>
                    <tbody>
                        {summaryData.map((item, index) => (
                            <tr class:list={[{'bg-slate-50': index % 2 !== 0}]}>
                                <td class="px-4 py-2 border font-semibold">{item.name}</td>
                                <td class="px-4 py-2 border text-center">{item.location}</td>
                                <td class="px-4 py-2 border text-center text-xl font-bold">{item.evaluation}</td>
                                <td class="px-4 py-2 border">{item.feature}</td>
                                <td class="px-4 py-2 border">{item.fee}</td>
                            </tr>
                        ))}
                    </tbody>
                </table>
                 <p class="text-sm text-slate-600 mt-2">*(環境評価：◎-特に優れている ◯-良い △-簡易的)*</p>
            </div>

            {/* スマホ向けカード表示 */}
            <div class="space-y-4 my-4 not-prose md:hidden">
                {summaryData.map(item => (
                    <div class="border rounded-lg p-4">
                        <h3 class="text-lg font-bold m-0">{item.name}</h3>
                        <table class="w-full mt-2 text-sm"><tbody>
                            <tr><td class="font-semibold pr-2 py-1 w-1/4">場所</td><td class="py-1">{item.location}</td></tr>
                            <tr><td class="font-semibold pr-2 py-1">評価</td><td class="py-1">{item.evaluation}</td></tr>
                            <tr><td class="font-semibold pr-2 py-1 align-top">特徴</td><td class="py-1">{item.feature}</td></tr>
                            <tr><td class="font-semibold pr-2 py-1">料金</td><td class="py-1">{item.fee}</td></tr>
                        </tbody></table>
                    </div>
                ))}
            </div>
            {/* --- 早見表ここまで --- */}
            
            {/* ... (ランキングや本文は省略) ... */}

            <section class="mt-12 pt-6 border-t border-slate-200 text-center">
                <h2 class="text-2xl md:text-3xl font-bold text-slate-800">この記事をシェアする</h2>
                <div class="flex justify-center items-center space-x-4 my-4">
                    {/* Xでシェア */}
                    <a href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(articleUrl)}&text=${encodeURIComponent(headline)}`} target="_blank" rel="noopener noreferrer" class="nav-link inline-flex items-center bg-black text-white font-bold py-2 px-6 rounded-lg hover:bg-gray-800 transition no-underline">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 16 16" fill="currentColor"><path d="M9.294 6.928L14.357 1h-1.2L8.762 6.147L5.25 1H1.2l5.31 7.643L1 15h1.2l4.59-5.437L10.75 15h4.05l-5.506-8.072zM7.65 8.825l-.742-1.06L2.65 2.11h2.1l3.5 5.013l.742 1.06l4.473 6.4h-2.1l-3.8-5.437z"></path></svg>
                        Xでシェア
                    </a>
                    {/* LINEでシェア */}
                    <a href={`https://social-plugins.line.me/lineit/share?url=${encodeURIComponent(articleUrl)}`} target="_blank" rel="noopener noreferrer" class="nav-link inline-flex items-center bg-[#06C755] text-white font-bold py-2 px-6 rounded-lg hover:bg-[#05a546] transition no-underline">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 16 16" fill="currentColor"><path d="M8 0C3.58 0 0 3.58 0 8s3.58 8 8 8s8-3.58 8-8s-3.58-8-8-8zm4.13 11.32c-.14.43-.58.68-1.01.54l-1.93-.6c-.23-.07-.38-.28-.38-.52v-.02c0-.07 0-.15.02-.22l.6-2.02c.07-.22 0-.46-.17-.59l-.3-.23c-.16-.13-.23-.33-.16-.52s.27-.33.48-.36l2.3-.34c.43-.06.82.26.88.69l.48 3.03c.06.43-.26.82-.69.88zM4.31 8.52c0-.55.45-1 1-1h1.5c.55 0 1 .45 1 1v1.5c0 .55-.45 1-1 1h-1.5c-.55 0-1-.45-1-1V8.52z"></path></svg>
                        LINEで送る
                    </a>
                </div>
            </section>
            
            <section id="info-summary" class="mt-12 pt-6 border-t border-slate-200">
                <h2 class="text-2xl md:text-3xl font-bold text-slate-800">各施設の基本情報まとめ</h2>
                <div class="space-y-8 mt-4">
                    {Object.values(rangesInfo).map(range => {
                        const searchQuery = encodeURIComponent(`${range.name}, ${range.address}`);
                        const mapsEmbedUrl = `https://www.google.com/maps/embed/v1/place?key=${gmapsApiKey}&q=${searchQuery}`;

                        return (
                            <div>
                                <h3 class="text-xl font-bold">{range.name}</h3>
                                <div class="not-prose overflow-x-auto mt-4">
                                    <table class="w-full text-left border-collapse"><tbody>
                                        <tr class="border-b border-slate-200"><th class="py-3 px-4 bg-slate-50 font-semibold w-1/3">住所</th><td class="py-3 px-4">{range.address}</td></tr>
                                        <tr class="border-b border-slate-200"><th class="py-3 px-4 bg-slate-50 font-semibold">電話番号</th><td class="py-3 px-4">{range.phone}</td></tr>
                                        <tr><th class="py-3 px-4 bg-slate-50 font-semibold">営業時間</th><td class="py-3 px-4">{range.hours}</td></tr>
                                    </tbody></table>
                                </div>
                                <div class="not-prose mt-4">
                                    <iframe src={mapsEmbedUrl} width="100%" height="350" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" title={`${range.name}の地図`}></iframe>
                                </div>
                            </div>
                        )
                    })}
                </div>
            </section>
            
        </article>
    </div>
</BaseLayout>