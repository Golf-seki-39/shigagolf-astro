---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { db } from "../../../lib/firebase.js";
import { doc, getDoc } from "firebase/firestore";
// [修正点1] AstroのImageコンポーネントをインポート
import { Image } from "astro:assets";

// --- 共通コンポーネント ---
import MySlider from '../../../components/MySlider.astro';
import ShareButtons from '../../../components/ShareButtons.astro';
import AuthorProfile from '../../../components/AuthorProfile.astro';

// --- この記事固有の情報 ---
const baseUrl = "https://shigolf.com";
const articleUrl = `${baseUrl}/articles/omi-higashiomi-comparison/`;
const publicationDate = "2025-07-24";
const lastModified = new Date();

const title = "【近江八幡・東近江】ゴルフ練習場4選・徹底比較！ | シガゴル";
const description =
    "近江八幡・東近江エリアの主要なゴルフ練習場4ヶ所を、料金、設備、目的別に徹底比較。あなたにピッタリの練習場が必ず見つかります。";
const category = "比較記事"; 
const headline = "【徹底比較】近江八幡・東近江エリアのゴルフ練習場4選";
const imageUrl = "https://i.imgur.com/DyVr8of.jpeg";

// --- Firebaseから各練習場の情報を取得 ---
const rangeIds = [
    "azuchi_gc",
    "sakura_gc",
    "riverside_jumbo",
    "greenpia_oh",
    "garage_park",
];
const appId = import.meta.env.PUBLIC_FIREBASE_APP_ID;
const rangePromises = rangeIds.map((id) =>
    getDoc(doc(db, `artifacts/${appId}/public/data/practice_ranges/${id}`)),
);
const rangeDocs = await Promise.all(rangePromises);

const rangesData = rangeDocs.reduce((acc, docSnap, index) => {
    if (docSnap.exists()) {
        acc[rangeIds[index]] = docSnap.data();
    } else {
        acc[rangeIds[index]] = null;
    }
    return acc;
}, {});

if (rangesData.greenpia_oh) {
    rangesData.greenpia_oh.name = "グリーンピア近江八幡ゴルフ";
}

// --- 各施設のアイキャッチ画像URLを定義 ---
const rangeImages = {
    azuchi_gc: "https://i.imgur.com/IGsEk2z.png",
    sakura_gc: "https://i.imgur.com/g7hXn4M.png",
    riverside_jumbo: "https://i.imgur.com/0MtYdOy.jpeg",
    greenpia_oh: "https://i.imgur.com/1A8qwY3.jpeg",
};

// --- 早見表のデータをループ処理用に整理 ---
const summaryConfig = [
    { id: "azuchi_gc", recommend: "初心者・安心感重視", approach: "×", bunker: "◯", putter: "△", feature: ["プリカ不要で手軽！", "優しい店主がお出迎え。"] },
    { id: "sakura_gc", recommend: "女性・ジュニア・お得好き", approach: "◎", bunker: "◯", putter: "◯", feature: ["女性・ジュニアの天国！", "特典がとにかく凄い。"] },
    { id: "riverside_jumbo", recommend: "スコアアップを目指す中・上級者", approach: "◎", bunker: "◎", putter: "◎", feature: ["ショートゲーム施設の質は随一！", "本気で上手くなりたいならここ。"] },
    { id: "greenpia_oh", recommend: "価格最優先・練習量重視", approach: "◯", bunker: "◯", putter: "◯", feature: ["SDカード持参で衝撃価格！", "施設の古さはご愛嬌。"] },
];
const summaryData = summaryConfig.map((item) => ({
    ...item,
    name: rangesData[item.id]?.name || "練習場名",
    city: rangesData[item.id]?.city || "",
}));

// --- 構造化データ(JSON-LD)の生成 ---
const itemListElements = rangeIds.slice(0, 4).map((id, index) => {
    const range = rangesData[id];
    if (!range) return null;
    const openingHours = range.business_hours_structured?.map((item) => ({ "@type": "OpeningHoursSpecification", dayOfWeek: item.dayOfWeek, opens: item.opens, closes: item.closes }));
    return {
        "@type": "ListItem",
        position: index + 1,
        item: {
            "@type": "SportsActivityLocation", name: range.name, url: `${baseUrl}/ranges/${id}/`, image: rangeImages[id], telephone: range.phone, priceRange: range.priceRange || "¥1000-¥3000",
            address: { "@type": "PostalAddress", streetAddress: range.address, addressLocality: range.city, addressRegion: "滋賀県", postalCode: range.postalCode, addressCountry: "JP" },
            geo: { "@type": "GeoCoordinates", latitude: range.lat, longitude: range.lng },
            openingHoursSpecification: openingHours,
        },
    };
}).filter(Boolean);

const faqElements = {
    "@type": "FAQPage",
    mainEntity: [
        { "@type": "Question", name: "初心者におすすめのゴルフ練習場はどこですか？", acceptedAnswer: { "@type": "Answer", text: "本記事で紹介している中では「安土ゴルフクラブ」と「さくらゴルフ倶楽部」が特におすすめです。安土ゴルフクラブは料金が分かりやすく、アットホームな雰囲気です。さくらゴルフ倶楽部には初心者優先スペースがあり、周りの目を気にせず練習に集中できます。" } },
        { "@type": "Question", name: "一番安いゴルフ練習場はどこですか？", acceptedAnswer: { "@type": "Answer", text: "料金はプランや時間帯によって大きく異なりますが、特定の割引（SDカード等）が適用されるなら「グリーンピア近江八幡ゴルフ」が1球あたりの単価が最も安くなる可能性があります。女性やジュニアの方であれば、「さくらゴルフ倶楽部」の特典が非常にお得です。" } },
    ],
};

// --- 関連記事リスト ---
const experienceReports = [
    { url: '/articles/azuchi-review/', title: '安土ゴルフクラブ 体験レポート', img: 'https://i.imgur.com/cJBj7Sh.png' },
    { url: '/articles/sakura-gc-review/', title: 'さくらゴルフ倶楽部 体験レポート', img: 'https://i.imgur.com/DqJ7aMO.png' },
    { url: '/articles/garege-park-review/', title: 'がれーじぱーく東近江 体験レポート', img: 'https://i.imgur.com/TQmlJFb.jpeg' },
    { url: '/articles/review/greenpia-oh/', title: 'グリーンピア近江八幡ゴルフ 体験レポート', img: 'https://i.imgur.com/KIm1JOr.jpeg' },
];
const comparisonArticles = [
    { url: '/articles/comparison/omi-priceRank/', title: '【料金で徹底比較】近江八幡・東近江の安い練習場5選', img: 'https://i.imgur.com/DOzSbMV.jpeg' },
    { url: '/articles/comparison/higashiomi-guide/', title: '【2025年最新】東近江市のゴルフ練習場まとめ｜全3施設を料金・設備で徹底比較', img: 'https://i.imgur.com/1sT2kzY.jpeg' },
    { url: '/articles/comparison/omi-putting/', title: '【パター練習場が充実】近江八幡・東近江エリア4選', img: 'https://i.imgur.com/IJZwf4W.jpeg' },
    { url: '/articles/omi-higashiomi-approach/', title: '【アプローチ＆バンカー練習場】近江八幡・東近江5選', img: 'https://i.imgur.com/jOTBh4U.jpeg' },
    { url: '/articles/comparison/omi-lesson/', title: '【レッスン比較】近江八幡・東近江の初心者向け4選', img: 'https://i.imgur.com/XXlXJbL.jpeg' },
    { url: '/articles/omi-higashiomi-comparison/', title: '【総合比較】近江八幡・東近江エリアのゴルフ練習場4選', img: 'https://i.imgur.com/DyVr8of.jpeg' },
];

const gmapsApiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;
---

<BaseLayout title={title} description={description} pubDate={publicationDate} ogImage={imageUrl}>
    <script
        slot="head"
        type="application/ld+json"
        set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "BlogPosting",
            mainEntityOfPage: { "@type": "WebPage", "@id": articleUrl },
            headline: headline,
            description: description,
            // [修正点4] 記事内の全画像を追加
            image: [imageUrl, ...Object.values(rangeImages)],
            author: { "@type": "Person", name: "関（せき）", url: `${baseUrl}/about/`, image: "https://i.imgur.com/BOcMOf3.png" },
            publisher: {
                "@type": "Organization",
                name: "シガゴル",
                logo: { "@type": "ImageObject", url: "https://i.imgur.com/mN0IbPS.png", width: 600, height: 60 },
            },
            datePublished: new Date(publicationDate).toISOString(),
            dateModified: lastModified.toISOString(),
            hasPart: { "@type": "ItemList", itemListElement: itemListElements },
            mainEntity: faqElements,
            about: [ { "@type": "Thing", name: "滋賀 ゴルフ練習場" }, { "@type": "Thing", name: "近江八幡 ゴルフ" }, { "@type": "Thing", name: "東近江 ゴルフ" } ],
        })}
    />

    <div id="article-view" class="view bg-white p-6 md:p-8 rounded-lg shadow-lg max-w-4xl mx-auto">
        <a href="/articles/" class="nav-link back-button mb-6 text-green-700 font-semibold hover:underline">
            ‹ お役立ち記事一覧に戻る
        </a>
        <article class="prose lg:prose-xl max-w-none text-slate-700 leading-relaxed">
            <style>
                html { scroll-behavior: smooth; }
                section[id] { scroll-margin-top: 80px; }
                .cta-icon { width: 1.2em; height: 1.2em; margin-right: 0.5em; vertical-align: text-bottom; }
            </style>

            <header>
                <h1 class="text-3xl md:text-4xl font-bold text-slate-800">{title.split(" | ")[0]}</h1>
                <p class="text-sm text-slate-500 mt-2">
                    最終更新日：{lastModified.getFullYear()}-{String(lastModified.getMonth() + 1).padStart(2, "0")}-{String(lastModified.getDate()).padStart(2, "0")}
                </p>
            </header>

            <Image
                src={imageUrl}
                alt="滋賀県（近江八幡・東近江）のゴルフ練習場"
                class="w-full h-auto object-cover rounded-lg my-6"
                loading="eager"
                width={1200}
                height={800}
                fetchpriority="high"
                format="webp" quality={80}
            />

            <div class="not-prose bg-blue-50 p-4 my-6 rounded-lg border border-l-4 border-blue-500">
                <p class="font-bold text-slate-800 text-lg">
                    結論：初心者なら<a href="#article-azuchi" class="text-green-700 hover:underline">安土ゴルフクラブ</a>、スコアアップ目的なら<a href="#article-riverside" class="text-green-700 hover:underline">リバーサイドジャンボゴルフ</a>がおすすめです。
                </p>
            </div>

            <p>
                滋賀県内でゴルフ練習場を探しているけれど、「どこが自分に合っているか分からない…」と悩んでいませんか？この記事では、特に<strong>近江八幡市・東近江市エリア</strong>に絞り、主要なゴルフ練習場4ヶ所を運営者が実際に足を運んだ経験から徹底比較します。
            </p>

            <div class="toc-container bg-slate-50 p-6 rounded-lg border border-slate-200 my-8 not-prose">
                <h2 class="text-xl font-bold mb-4 text-slate-800">この記事の目次</h2>
                <ul class="space-y-2 list-disc list-inside">
                    <li><a href="#summary-table" class="text-green-700 hover:underline">結論から！比較早見表</a></li>
                    <li>
                        <a href="#review-details" class="text-green-700 hover:underline">【目的別】各ゴルフ練習場の詳細レビュー</a>
                        <ul class="pl-6 mt-2 space-y-1 list-disc list-inside">
                            <li><a href="#article-azuchi" class="text-slate-600 hover:underline">A. 安土ゴルフクラブ</a></li>
                            <li><a href="#article-sakura" class="text-slate-600 hover:underline">B. さくらゴルフ倶楽部</a></li>
                            <li><a href="#article-riverside" class="text-slate-600 hover:underline">C. リバーサイドジャンボゴルフ</a></li>
                            <li><a href="#article-greenpia" class="text-slate-600 hover:underline">D. グリーンピア近江八幡ゴルフ</a></li>
                        </ul>
                    </li>
                    <li><a href="#conclusion-summary" class="text-green-700 hover:underline">結論まとめ</a></li>
                    <li><a href="#faq" class="text-green-700 hover:underline">ゴルフ練習場選びのよくある質問</a></li>
                    <li><a href="#info-summary" class="text-green-700 hover:underline">各施設の基本情報まとめ</a></li>
                </ul>
            </div>

            <div class="not-prose bg-slate-50 p-4 my-6 rounded-lg border border-l-4 border-green-600">
                <p class="font-bold text-slate-800 m-0">
                    この記事は、シガゴル運営者が実際に近江八幡・東近江エリアの全4施設に足を運んで執筆しています。
                </p>
            </div>

            <h2 id="summary-table" class="text-2xl font-bold mt-8 pt-4 border-t border-slate-200 scroll-mt-24">
                結論から！比較早見表
            </h2>
            <p>忙しいあなたのために、まずは各練習場の特徴を一覧でまとめました。</p>

            <div class="overflow-x-auto my-4 not-prose hidden md:block">
                <table class="w-full text-sm text-left border border-slate-300 min-w-[900px]">
                    <thead class="bg-slate-50">
                        <tr>
                            <th scope="col" class="px-4 py-3 border border-slate-300 align-middle text-center whitespace-nowrap text-base font-semibold normal-case">練習場名</th>
                            <th scope="col" class="px-4 py-3 border border-slate-300 text-center whitespace-nowrap">こんな人におすすめ</th>
                            <th scope="col" class="px-4 py-3 border border-slate-300 text-center whitespace-nowrap">アプローチ</th>
                            <th scope="col" class="px-4 py-3 border border-slate-300 text-center whitespace-nowrap">バンカー</th>
                            <th scope="col" class="px-4 py-3 border border-slate-300 text-center whitespace-nowrap">パター</th>
                            <th scope="col" class="px-4 py-3 border border-slate-300 text-center whitespace-nowrap">一言メモ</th>
                        </tr>
                    </thead>
                    <tbody>
                        {summaryData.map((item, index) => (
                                <tr class={index % 2 !== 0 ? "bg-slate-50 border-b" : "bg-white border-b"}>
                                    <td class="px-4 py-2 border align-middle">
                                        <a href={`/ranges/${item.id}/`} class="text-blue-600 hover:underline">
                                            <span class="whitespace-nowrap">{item.name}</span><br />
                                            <span class="text-xs text-slate-500">({item.city})</span>
                                        </a>
                                    </td>
                                    <td class="px-4 py-2 border align-middle"><span class="whitespace-nowrap">{item.recommend}</span></td>
                                    <td class="px-4 py-2 border text-center align-middle font-bold text-lg">{item.approach}</td>
                                    <td class="px-4 py-2 border text-center align-middle font-bold text-lg">{item.bunker}</td>
                                    <td class="px-4 py-2 border text-center align-middle font-bold text-lg">{item.putter}</td>
                                    <td class="px-4 py-2 border text-center align-middle">
                                        {item.feature.map((line) => (<span class="block whitespace-nowrap">{line}</span>))}
                                    </td>
                                </tr>
                            ))}
                    </tbody>
                </table>
                <p class="text-sm text-slate-600 mt-2">
                    ※ショートゲーム評価：◎は特に優れている、◯は良い、△は簡易的、×は無しを示します。
                </p>
            </div>

            <div class="space-y-4 my-4 not-prose md:hidden">
                {summaryData.map((item) => (
                        <div class="border rounded-lg p-4">
                            <h3 class="text-lg font-bold m-0">
                                <a href={`/ranges/${item.id}/`} class="text-blue-600 hover:underline">{item.name}</a>
                            </h3>
                            <p class="text-sm text-slate-500 m-0">{item.city}</p>
                            <table class="w-full mt-2 text-sm">
                                <tbody>
                                    <tr>
                                        <td class="font-semibold pr-2 py-1 align-top w-1/3">おすすめ</td>
                                        <td class="py-1">{item.recommend}</td>
                                    </tr>
                                    <tr>
                                        <td class="font-semibold pr-2 py-1">アプローチ</td>
                                        <td class="py-1 font-bold text-lg">{item.approach}</td>
                                    </tr>
                                    <tr>
                                        <td class="font-semibold pr-2 py-1">バンカー</td>
                                        <td class="py-1 font-bold text-lg">{item.bunker}</td>
                                    </tr>
                                    <tr>
                                        <td class="font-semibold pr-2 py-1">パター</td>
                                        <td class="py-1 font-bold text-lg">{item.putter}</td>
                                    </tr>
                                    <tr>
                                        <td class="font-semibold pr-2 py-1 align-top">一言メモ</td>
                                        <td class="py-1">{item.feature.join(" ")}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    ))}
            </div>

            <section id="review-details">
                <h2 class="text-2xl font-bold mt-8 pt-4 border-t border-slate-200">【目的別】各ゴルフ練習場の詳細レビュー</h2>
                <p>
                    比較表で気になる練習場は見つかりましたか？ここからは、それぞれの練習場のリアルな魅力と、「知っておくと良いポイント」を詳しくご紹介します！
                </p>

                <section class="mt-8 scroll-mt-24" id="article-azuchi">
                    <p class="text-lg font-semibold text-green-700">A. 初心者・安心感重視ならここ！</p>
                    <h3 class="text-2xl font-bold text-slate-800 mt-1">{rangesData.azuchi_gc?.name}</h3>
                    <Image src={rangeImages.azuchi_gc} alt={`${rangesData.azuchi_gc?.name}の外観`} class="w-full h-auto object-cover rounded-lg my-4" loading="lazy" width={1600} height={900} format="webp" quality={80} />
                    <h4 class="text-xl font-bold mt-4">ここがスゴい！3つの魅力</h4>
                    <ul class="list-none space-y-2 mt-2 pl-2">
                        <li><span class="text-green-600 font-bold">✔</span> <strong>プリカ不要！現金払いの究極の手軽さ</strong><br />「今日は100球だけ」と700円を握りしめて行ける気軽さが最高！差額を払えば打ち放題に変更してくれる”神対応”も。</li>
                        <li><span class="text-green-600 font-bold">✔</span> <strong>強面だけど超優しい店主の人柄</strong><br />初めてだと伝えれば満面の笑みで丁寧に教えてくれます。その温かい人柄とアットホームな雰囲気が、初心者の不安を吹き飛ばしてくれます。</li>
                        <li><span class="text-green-600 font-bold">✔</span> <strong>本物のツアープロによる本格レッスン</strong><br />ツアー経験者の入江賢プロから、本物の技術をマンツーマンで学べます。本気で上手くなりたいなら、これ以上ない最高の環境です。</li>
                    </ul>
                    <h4 class="text-xl font-bold mt-4">知っておくと良いポイント</h4>
                    <ul class="list-disc list-inside space-y-2 mt-2 pl-4">
                        <li>距離が約180ヤードと短めなので、ドライバーの飛距離確認には不向きです。</li>
                        <li>アプローチやパターの専用グリーンはありません。</li>
                        <li>自動ティーアップや弾道測定器はなく、昔ながらのスタイルです。</li>
                    </ul>
                    <div class="not-prose text-center my-6 space-y-4 md:space-y-0 md:space-x-4">
                        <a href="/articles/azuchi-review/" class="nav-link inline-flex items-center justify-center bg-orange-500 text-white font-bold py-3 px-6 rounded-lg shadow-md hover:bg-orange-600 transition-colors duration-200 text-base no-underline">
                            <svg class="cta-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M12 4a4 4 0 1 1 0 8a4 4 0 0 1 0-8Zm0 10c2.67 0 8 1.34 8 4v2H4v-2c0-2.66 5.33-4 8-4Z"></path></svg>
                            管理人の詳細体験レポートを読む
                        </a>
                        <a href="/ranges/azuchi_gc/" class="nav-link inline-flex items-center justify-center bg-green-700 text-white font-bold py-3 px-6 rounded-lg shadow-md hover:bg-green-800 transition-colors duration-200 text-base no-underline">
                            <svg class="cta-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M4 21V9.975L12 3L20 9.975V21H14V14H10V21H4Z"></path></svg>
                            この練習場の施設詳細ページへ
                        </a>
                    </div>
                </section>

                <section class="mt-12 pt-6 border-t border-slate-200 scroll-mt-24" id="article-sakura">
                    <p class="text-lg font-semibold text-green-700">B. コスパ最強！女性・ジュニアなら断然ここ！</p>
                    <h3 class="text-2xl font-bold text-slate-800 mt-1">{rangesData.sakura_gc?.name}</h3>
                    <Image src={rangeImages.sakura_gc} alt={`${rangesData.sakura_gc?.name}の外観`} class="w-full h-auto object-cover rounded-lg my-4" loading="lazy" width={1600} height={900} format="webp" quality={80} />
                    <h4 class="text-xl font-bold mt-4">ここがスゴい！3つの魅力</h4>
