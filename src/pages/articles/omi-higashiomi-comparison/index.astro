                class="mt-12 pt-6 border-t border-slate-200 scroll-mt-24"
            >
                <h2 class="text-2xl md:text-3xl font-bold text-slate-800">
                    各施設の基本情報まとめ
                </h2>
                <div class="space-y-8 mt-4">
                    {
                        rangeIds.slice(0, 4).map((id) => {
                            // 記事本体の4選のみを対象
                            const range = rangesData[id];
                            if (!range) return null;

                            const searchQuery = encodeURIComponent(
                                `${range.name}, ${range.address}`,
                            );
                            const mapsSearchUrl = `https://www.google.com/maps/search/?api=1&query=${searchQuery}`;
                            const mapsEmbedUrl = `https://www.google.com/maps/embed/v1/place?key=${gmapsApiKey}&q=${searchQuery}`;

                            return (
                                <div id={id} class="scroll-mt-24">
                                    <h3 class="text-xl font-bold">
                                        {range.name}
                                    </h3>
                                    <div class="not-prose overflow-x-auto mt-4">
                                        <table class="w-full text-left border-collapse">
                                            <tbody>
                                                <tr class="border-b border-slate-200">
                                                    <th class="py-3 px-4 bg-slate-50 font-semibold w-1/3">
                                                        住所
                                                    </th>
                                                    <td class="py-3 px-4">
                                                        <a
                                                            href={mapsSearchUrl}
                                                            target="_blank"
                                                            rel="noopener noreferrer"
                                                            class="text-blue-600 hover:underline"
                                                        >
                                                            {range.address}
                                                        </a>
                                                    </td>
                                                </tr>
                                                <tr class="border-b border-slate-200">
                                                    <th class="py-3 px-4 bg-slate-50 font-semibold">
                                                        電話番号
                                                    </th>
                                                    <td class="py-3 px-4">
                                                        {range.phone ? (
                                                            <a
                                                                href={`tel:${range.phone.replace(/-/g, "")}`}
                                                                class="text-blue-600 hover:underline"
                                                            >
                                                                {range.phone}
                                                            </a>
                                                        ) : (
                                                            "-"
                                                        )}
                                                    </td>
                                                </tr>
                                                <tr class="border-b border-slate-200">
                                                    <th class="py-3 px-4 bg-slate-50 font-semibold">
                                                        営業時間
                                                    </th>
                                                    <td
                                                        class="py-3 px-4"
                                                        set:html={
                                                            range.business_hours?.replace(
                                                                /\n/g,
                                                                "<br />",
                                                            ) || "-"
                                                        }
                                                    />
                                                </tr>
                                                <tr class="border-b border-slate-200">
                                                    <th class="py-3 px-4 bg-slate-50 font-semibold">
                                                        ヤード数
                                                    </th>
                                                    <td class="py-3 px-4">
                                                        {range.yardage
                                                            ? `${range.yardage}ヤード`
                                                            : "インドア"}
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th class="py-3 px-4 bg-slate-50 font-semibold">
                                                        打席数
                                                    </th>
                                                    <td class="py-3 px-4">
                                                        {range.bays
                                                            ? `${range.bays}打席`
                                                            : "-"}
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="not-prose mt-4">
                                        <iframe
                                            src={mapsEmbedUrl}
                                            width="100%"
                                            height="350"
                                            style="border:0;"
                                            allowfullscreen=""
                                            loading="lazy"
                                            referrerpolicy="no-referrer-when-downgrade"
                                            title={`${range.name}の地図`}
                                        />
                                    </div>
                                </div>
                            );
                        })
                    }
                </div>
            </section>
        </article>
    </div>
</BaseLayout>
