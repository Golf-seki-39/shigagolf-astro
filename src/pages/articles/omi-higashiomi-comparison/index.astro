import BaseLayout from "../../../layouts/BaseLayout.astro";
import { db } from "../../../lib/firebase.js";
import { doc, getDoc } from "firebase/firestore";

// --- この記事固有の情報 ---
const baseUrl = "https://shigagolf.com";
const articleUrl = `${baseUrl}/articles/omi-higashiomi-comparison/`;
const publicationDate = "2025-07-24";
const lastModified = new Date();

const title = "【近江八幡・東近江】ゴルフ練習場4選・徹底比較！ | シガゴル";
const description =
    "近江八幡・東近江エリアの主要なゴルフ練習場4ヶ所を、料金、設備、目的別に徹底比較。あなたにピッタリの練習場が必ず見つかります。";
const headline = "【徹底比較】近江八幡・東近江エリアのゴルフ練習場4選";
const imageUrl = "https://i.imgur.com/DyVr8of.jpeg";

// --- Firebaseから各練習場の情報を取得 ---
// ★ がれーじぱーくの情報を追加取得
const rangeIds = [
    "azuchi_gc",
    "sakura_gc",
    "riverside_jumbo",
    "greenpia_oh",
    "garage_park",
];
const appId = import.meta.env.PUBLIC_FIREBASE_APP_ID;
const rangePromises = rangeIds.map((id) =>
    getDoc(doc(db, `artifacts/${appId}/public/data/practice_ranges/${id}`)),
);
const rangeDocs = await Promise.all(rangePromises);

const rangesData = rangeDocs.reduce((acc, docSnap, index) => {
    if (docSnap.exists()) {
        acc[rangeIds[index]] = docSnap.data();
    } else {
        acc[rangeIds[index]] = null;
    }
    return acc;
}, {});

// --- 各施設のアイキャッチ画像URLを定義 ---
const rangeImages = {
    azuchi_gc: "https://i.imgur.com/IGsEk2z.png",
    sakura_gc: "https://i.imgur.com/g7hXn4M.png",
    riverside_jumbo: "https://i.imgur.com/0MtYdOy.jpeg",
    greenpia_oh: "https://i.imgur.com/1A8qwY3.jpeg",
};

// --- 早見表のデータをループ処理用に整理 ---
const summaryConfig = [
    {
        id: "azuchi_gc",
        recommend: "初心者・安心感重視",
        approach: "×",
        bunker: "◯",
        putter: "△",
        feature: "プリカ不要で手軽！<br>優しい店主がお出迎え。",
    },
    {
        id: "sakura_gc",
        recommend: "女性・ジュニア・お得好き",
        approach: "◎",
        bunker: "◯",
        putter: "◯",
        feature: "女性・ジュニアの天国！<br>特典がとにかく凄い。",
    }, // ★ バンカーを◯に修正
    {
        id: "riverside_jumbo",
        recommend: "スコアアップを目指す中級者〜",
        approach: "◎",
        bunker: "◎",
        putter: "◎",
        feature:
            "ショートゲーム施設の質は随一！<br>本気で上手くなりたいならここ。",
    },
    {
        id: "greenpia_oh",
        recommend: "価格最優先で打ち込みたいゴルファー",
        approach: "◯",
        bunker: "◯",
        putter: "◯",
        feature: "SDカード持参で衝撃価格！<br>施設の古さはご愛嬌。",
    }, // ★ おすすめ文言を修正
];
const summaryData = summaryConfig.map((item) => ({
    ...item,
    name: rangesData[item.id]?.name || "練習場名",
    city: rangesData[item.id]?.city || "",
}));

// --- 構造化データ(JSON-LD)の生成 ---
const itemListElements = rangeIds
    .slice(0, 4)
    .map((id, index) => {
        // 記事本体の4選のみを対象
        const range = rangesData[id];
        if (!range) return null;
        const openingHours = range.business_hours_structured?.map((item) => ({
            "@type": "OpeningHoursSpecification",
            dayOfWeek: item.dayOfWeek,
            opens: item.opens,
            closes: item.closes,
        }));
        return {
            "@type": "ListItem",
            position: index + 1,
            item: {
                "@type": "SportsActivityLocation",
                name: range.name,
                url: `${baseUrl}/ranges/${id}/`,
                image: rangeImages[id],
                telephone: range.phone,
                priceRange: range.priceRange || "¥1000-¥3000",
                address: {
                    "@type": "PostalAddress",
                    streetAddress: range.address,
                    addressLocality: range.city,
                    addressRegion: "滋賀県",
                    postalCode: range.postalCode,
                    addressCountry: "JP",
                },
                geo: {
                    "@type": "GeoCoordinates",
                    latitude: range.lat,
                    longitude: range.lng,
                },
                openingHoursSpecification: openingHours,
            },
        };
    })
    .filter(Boolean);

const faqElements = {
    "@type": "FAQPage",
    mainEntity: [
        {
            "@type": "Question",
            name: "初心者におすすめのゴルフ練習場はどこですか？",
            acceptedAnswer: {
                "@type": "Answer",
                text: "本記事で紹介している中では「安土ゴルフクラブ」と「さくらゴルフ倶楽部」が特におすすめです。安土ゴルフクラブは料金が分かりやすく、アットホームな雰囲気です。さくらゴルフ倶楽部には初心者優先スペースがあり、周りの目を気にせず練習に集中できます。",
            },
        },
        {
            "@type": "Question",
            name: "一番安いゴルフ練習場はどこですか？",
            acceptedAnswer: {
                "@type": "Answer",
                text: "料金はプランや時間帯によって大きく異なりますが、特定の割引（SDカード等）が適用されるなら「グリーンピア近江八幡ゴルフ」が1球あたりの単価が最も安くなる可能性があります。女性やジュニアの方であれば、「さくらゴルフ倶楽部」の特典が非常にお得です。",
            },
        },
    ],
};

const gmapsApiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;
