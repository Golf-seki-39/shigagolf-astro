---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { db } from "../../../lib/firebase.js";
import { collection, getDocs, query, orderBy } from "firebase/firestore";

export async function getStaticPaths() {
    try {
        const articlesCollection = collection(
            db,
            "artifacts",
            import.meta.env.PUBLIC_FIREBASE_APP_ID,
            "public",
            "data",
            "articles",
        );
        const querySnapshot = await getDocs(articlesCollection);
        const allArticles = querySnapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));

        const articlesByCategory = {};

        for (const article of allArticles) {
            if (article.category && typeof article.category === 'string' && article.category.trim() !== '') {
                const categoryName = article.category.trim();
                if (!articlesByCategory[categoryName]) {
                    articlesByCategory[categoryName] = [];
                }
                articlesByCategory[categoryName].push(article);
            }
        }
        
        const recognizedCategories = Object.keys(articlesByCategory);
        console.log("Astroが認識したカテゴリ一覧:", recognizedCategories);

        if (recognizedCategories.length === 0) {
            console.warn("有効なカテゴリを持つ記事が見つかりませんでした。");
            return [];
        }

        return recognizedCategories.map(category => {
            return {
                params: { category: category },
                props: { articles: articlesByCategory[category] }
            };
        });

    } catch (error) {
        console.error("getStaticPathsでエラーが発生しました:", error);
        return [];
    }
}

const { category } = Astro.params;
const { articles: categoryArticles } = Astro.props;

const title = `${category} | シガゴル お役立ち記事`;
const description = `「${category}」に関するお役立ち記事一覧です。滋賀のゴルファーに役立つ情報を発信中。`;

const formatUrl = (url) => {
    if (!url) return '#';
    return url.endsWith('/') ? url : `${url}/`;
};

// --- ★★★ ここからステップ1の追加 ★★★ ---
// categoryArticles からユニークな「エリア」リストを抽出
const uniqueAreas = [...new Set(
  categoryArticles
    .map(article => article.area)
    .filter(Boolean) // nullや空文字を除外
)];
uniqueAreas.sort(); // あいうえお順に並び替え

// categoryArticles からユニークな「サブカテゴリ」リストを抽出
const uniqueSubCategories = [...new Set(
  categoryArticles
    .map(article => article.subCategory) // ※Firebaseのフィールド名を "subCategory" とした場合
    .filter(Boolean)
)];
uniqueSubCategories.sort();
// --- ★★★ ステップ1の追加ここまで ★★★ ---
---

<BaseLayout title={title} description={description}>
  <main class="container mx-auto p-4 md:p-6">
    <div class="text-center mb-10">
      <p class="text-sm text-slate-500">お役立ち記事</p>
      <h1 class="text-2xl md:text-3xl font-bold mb-2">{category}</h1>
    </div>
    
    <div class="flex flex-col md:flex-row gap-4 mb-8 p-4 bg-slate-50 rounded-lg justify-center max-w-lg mx-auto">
      <div class="flex-1">
        <label for="filter-area" class="block text-sm font-medium text-slate-700 mb-1">
          エリアで絞り込む
        </label>
        <select id="filter-area" class="w-full rounded-md border-slate-300 shadow-sm focus:border-green-500 focus:ring-green-500">
          <option value="all">すべてのエリア</option>
          {uniqueAreas.map(area => (
            <option value={area}>{area}</option>
          ))}
        </select>
      </div>
      
      <div class="flex-1">
        <label for="filter-subcategory" class="block text-sm font-medium text-slate-700 mb-1">
          種類で絞り込む
        </label>
        <select id="filter-subcategory" class="w-full rounded-md border-slate-300 shadow-sm focus:border-green-500 focus:ring-green-500">
          <option value="all">すべての種類</option>
          {uniqueSubCategories.map(sub => (
            <option value={sub}>{sub}</option>
          ))}
        </select>
      </div>
    </div>
    <div id="article-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {categoryArticles && categoryArticles.length > 0 ? (
        categoryArticles.map(article => (
          <a 
            href={formatUrl(article.url)} 
            
            class="article-card flex flex-col bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 group"
            
            data-area={article.area || 'none'}
            data-subcategory={article.subCategory || 'none'} >
            <div class="relative">
              <div class="w-full h-40 bg-slate-100 flex items-center justify-center">
                <img src={article.imageUrl} alt={article.title} class="w-full h-full object-contain" />
              </div>
            </div>
            <div class="p-4 flex-grow flex flex-col">
              <h3 class="text-lg font-bold text-slate-800 group-hover:text-green-700 transition-colors">
                {article.title}
              </h3>
              <p class="text-sm text-slate-600 mt-2 flex-grow">
                {article.description}
              </p>
              <div class="mt-4 text-right text-sm font-semibold text-green-600">
                続きを読む →
              </div>
            </div>
          </a>
        ))
      ) : (
        <p class="text-center col-span-full">このカテゴリの記事はまだありません。</p>
      )}
    </div>

    
    <div class="text-center mt-12">
        <a href="/articles/" class="text-green-600 font-semibold hover:underline">
            ← お役立ち記事一覧へ戻る
        </a>
    </div>
  </main>

  <script>
    // 1. 必要な要素を取得
    const filterArea = document.getElementById('filter-area');
    const filterSubCategory = document.getElementById('filter-subcategory');
    const articleCards = document.querySelectorAll('.article-card');
    
    // (おまけ機能用)
    const articleGrid = document.getElementById('article-grid');
    const noResultsMessage = document.getElementById('no-results-message');

    // 2. フィルターを実行する関数
    function applyFilters() {
      const selectedArea = filterArea.value;
      const selectedSubCategory = filterSubCategory.value;
      
      let visibleCount = 0; // 表示される記事の数をカウント

      // 3. すべての記事カードをループ
      articleCards.forEach(card => {
        const cardArea = card.dataset.area;
        const cardSubCategory = card.dataset.subcategory;

        // 4. 表示/非表示の条件を判定
        const areaMatch = (selectedArea === 'all') || (selectedArea === cardArea);
        const subCategoryMatch = (selectedSubCategory === 'all') || (selectedSubCategory === cardSubCategory);

        // 5. 両方の条件に一致すれば表示、そうでなければ非表示
        if (areaMatch && subCategoryMatch) {
          card.style.display = 'flex'; // 'flex' は元の class 属性に合わせる
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });
      
      // 6. (おまけ機能) もし一致する記事が0件なら「記事がありません」と表示
      if (noResultsMessage && articleGrid) {
        if (visibleCount === 0) {
          noResultsMessage.style.display = 'block';
          articleGrid.style.display = 'none'; // グリッドを非表示にする
        } else {
          noResultsMessage.style.display = 'none';
          articleGrid.style.display = 'grid'; // グリッドを再表示する
        }
      }
    }

    // 7. ドロップダウンを変更したら（changeイベント）、関数を実行
    filterArea.addEventListener('change', applyFilters);
    filterSubCategory.addEventListener('change', applyFilters);
  </script>
  </BaseLayout>