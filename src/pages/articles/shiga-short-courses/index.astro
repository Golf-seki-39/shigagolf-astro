---
// --- [1] AstroとFirebaseの基本設定 ---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { db } from "../../../lib/firebase.js";
import { doc, getDoc } from "firebase/firestore";
import { Image } from "astro:assets";

// --- [2] 共通コンポーネント ---
import MySlider from '../../../components/MySlider.astro';
import ShareButtons from '../../../components/ShareButtons.astro';
import AuthorProfile from '../../../components/AuthorProfile.astro';

// --- [3] 記事の基本情報 ---
const baseUrl = "https://shigolf.com";
const articleUrl = `${baseUrl}/articles/shiga-short-courses/`; 
const title = "【滋賀のショートコース】2ヶ所を徹底比較！3000円で回り放題 vs 1280円〜の本格派 | シガゴル";
const description = "滋賀県の練習場併設ショートコースは「安曇川」と「365長浜」の2ヶ所のみ。「一日中3,000円で回り放題」の安曇川か、「1,280円〜でナイター・一人利用OK」の長浜か。料金、グリーンの質、練習目的別の「正解」を断言します。";
const headline = "滋賀のショートコースは“2ヶ所だけ”！【安曇川 vs 365長浜】遠くても行く価値あるか徹底比較";
const imageUrl = "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/01010010002.jpg"; 
const pubDate = "2025-11-15";
const lastModified = new Date(); 

// --- [4] Firebaseから施設データを取得（成功パターン） ---
const rangeIds = ['365_nagahama', 'adogawa_sc'];
const appId = import.meta.env.PUBLIC_FIREBASE_APP_ID;

// ★ここが修正点：公開用データ(artifacts/.../public/...)を取得しにいく
const rangePromises = rangeIds.map(id => getDoc(doc(db, `artifacts/${appId}/public/data/practice_ranges/${id}`)));
const rangeDocs = await Promise.all(rangePromises);

const rangesData = rangeDocs.reduce((acc, docSnap, index) => {
    if (docSnap.exists()) { acc[rangeIds[index]] = docSnap.data(); }
    else { acc[rangeIds[index]] = null; } // データがない場合の安全策
    return acc;
}, {});

// データ補完（もしDBにない項目があればここで定義）
if (rangesData['365_nagahama'] && !rangesData['365_nagahama'].access) {
    rangesData['365_nagahama'].access = '長浜ICから車で10分';
}

// --- [5] この記事固有の比較データ ---
// Firebaseの基本データ(名前や住所)と、記事固有の評価コメントをマージ
const comparisonConfig = [
    { 
        id: "365_nagahama",
        url: "/articles/365-nagahama/short-course/",
        img: "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/365_nagahama/gallery/IMG_6583.jpeg",
        location: "湖北（長浜市）",
        price_display: "ビジター 1,280円～",
        price_detail: "9H",
        plan: "回り放題なし (追加9H 500円)",
        green: "◎ (人工芝 / 9.5ft)",
        practice_facility: "◎ (バンカー/パター)",
        hitori: "◎ (プレッシャー皆無)",
        summary: "本気で「上達」したい人向け。グリーンも戦略的で、「一人二役」練習に最適。併設の練習場（トップトレーサー完備）とのセットが最強。"
    },
    { 
        id: "adogawa_sc",
        url: "/articles/adogawa-sc-review/short-course/",
        img: "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/adogawa_sc/gallery/IMG_9119.JPG",
        location: "湖西（高島市）",
        price_display: "ビジター 3,000円",
        price_detail: "回り放題",
        plan: "◎ (全日回り放題)",
        green: "△ (ほぼ公園の芝)",
        practice_facility: "△ (バンカーのみ)",
        hitori: "○ (回り放題で楽しめる)",
        summary: "安さと「回り放題」が魅力。家族連れのアクティビティや、子供を遊ばせつつ練習するなど「自由な楽しみ方」ができる。併設の300Y練習場も◎。"
    }
];

const comparisonData = comparisonConfig.map(item => ({
    ...item,
    // DBから名前などを取得（なければ手書きフォールバック）
    name: rangesData[item.id]?.name || item.id, 
    address: rangesData[item.id]?.address || '',
    phone: rangesData[item.id]?.phone || '',
    city: rangesData[item.id]?.city || '',
    postalCode: rangesData[item.id]?.postalCode || ''
}));

// 体験レポートのURL
const additionalData = {
    "365_nagahama": { reviewUrl: "/articles/365-nagahama/short-course/" },
    "adogawa_sc": { reviewUrl: "/articles/adogawa-sc-review/short-course/" }
};

// --- [6] JSON-LD構造化データ ---
const mainEntity = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "mainEntityOfPage": { "@type": "WebPage", "@id": articleUrl },
    "headline": headline,
    "description": description,
    "image": [ imageUrl, ...comparisonData.map(c => c.img) ],
    "author": { "@type": "Person", "name": "関（シガゴル運営者）", "url": `${baseUrl}/about/` },
    "publisher": { "@type": "Organization", "name": "シガゴル", "logo": { "@type": "ImageObject", "url": "https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/logo.png" }},
    "datePublished": new Date(pubDate).toISOString(),
    "dateModified": lastModified.toISOString(),
    "about": comparisonData.map(facility => ({
        "@type": "GolfCourse",
        "name": facility.name,
        "image": facility.img,
        "description": facility.summary,
        "telephone": facility.phone,
        "address": {
            "@type": "PostalAddress",
            "addressRegion": "滋賀県",
            "addressLocality": facility.city,
            "streetAddress": facility.address.replace(facility.city, "").replace("滋賀県", ""),
            "postalCode": facility.postalCode,
            "addressCountry": "JP"
        }
    }))
};

const faqElements = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    { "@type": "Question", "name": "滋賀のショートコース（安曇川・長浜）での服装は？", "acceptedAnswer": { "@type": "Answer", "text": "本コースのようなドレスコードは一切ありません。Tシャツ、スニーカーでOKです。ゴルフウェアは不要で、練習場に行く感覚で気軽に利用できます。" } },
    { "@type": "Question", "name": "予約は必要ですか？", "acceptedAnswer": { "@type": "Answer", "text": "「365ゴルフクラブ ながはま」「安曇川スポーツセンター」ともに、基本的に予約は不要です。思い立ったその日に利用できます。" } },
    { "@type": "Question", "name": "本コースとショートコースの決定的な違いは？", "acceptedAnswer": { "@type": "Answer", "text": "最大の違いは「プレッシャーの有無」です。これら2施設は後続組を気にする必要がほとんどないため、本コースでは不可能な「打ち直し」や「一人二役」といった反復練習が可能です。" } }
  ]
};

// --- [7] 関連記事リスト ---
const experienceReports = [
    { url: '/articles/365-nagahama/short-course/', title: '【体験談②】365ながはま ショートコース徹底攻略法', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/0000aishort.jpg' },
    { url: '/articles/adogawa-sc-review/short-course/', title: '【体験談】安曇川ショートコース（グリーンは公園並み!?）', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/adogawa_sc/gallery/001111img.jpg' }, 
    { url: '/articles/365-nagahama/range/', title: '365ゴルフクラブながはま　体験レポート　', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/image_archive/gallery/0000ai.jpg' },
    { url: '/articles/adogawa-sc-review/range/', title: '安曇川スポーツセンター　体験レポート', img: 'https://storage.googleapis.com/shigagolf-e31e6.firebasestorage.app/practice_ranges/adogawa_sc/gallery/000000img.jpg' },
];

// マップ用APIキー
const gmapsApiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;
---

<BaseLayout title={title} description={description} pubDate={pubDate} ogImage={imageUrl}>
    <script slot="head" type="application/ld+json" set:html={JSON.stringify(mainEntity)} />
    <script slot="head" type="application/ld+json" set:html={JSON.stringify(faqElements)} />

    <div id="article-view" class="view bg-white p-6 md:p-8 rounded-lg shadow-lg max-w-4xl mx-auto">
        <a href="/articles/" class="nav-link back-button mb-6 text-green-700 font-semibold hover:underline">
            ‹ お役立ち記事一覧に戻る
        </a>
        
        <article class="prose lg:prose-xl max-w-none text-slate-700 leading-relaxed">
            
            <style is:global>
              html { scroll-behavior: smooth; }
              section[id], h2[id] { scroll-margin-top: 80px; }
              .cta-icon { width: 1.2em; height: 1.2em; margin-right: 0.5em; vertical-align: text-bottom; }

              /* --- 共有いただいた成功例のレスポンシブテーブルスタイル --- */
              .table-wrapper { overflow-x: auto; }
              .min-w-table-pc { min-width: 600px; }
              .responsive-table th:first-child, .responsive-table td:first-child { position: -webkit-sticky; position: sticky; left: 0; z-index: 10; }
              .responsive-table thead th:first-child { background-color: #f1f5f9; }
              .responsive-table tbody tr.bg-white td:first-child { background-color: #ffffff; }
              .responsive-table tbody tr.bg-slate-50 td:first-child { background-color: #f8fafc; }

              @media (max-width: 767px) and (orientation: portrait) {
                #article-view .responsive-table { min-width: 100% !important; }
                #article-view .responsive-table thead { display: none !important; }
                #article-view .responsive-table tr { display: block !important; margin-bottom: 1.5rem !important; border: 1px solid #cbd5e1 !important; border-radius: 0.5rem !important; box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1) !important; overflow: hidden; }
                #article-view .responsive-table td { display: block !important; text-align: right !important; position: relative !important; border-bottom: 1px solid #e2e8f0 !important; padding: 0.75rem 0.75rem 0.75rem 130px !important; left: auto !important; background-color: #fff !important; }
                #article-view .responsive-table td:last-child { border-bottom: none !important; }
                #article-view .responsive-table td::before { content: attr(data-label); position: absolute; left: 0.75rem; top: 50%; transform: translateY(-50%); font-weight: 600; text-align: left; color: #475569; width: 110px; }
                #article-view .responsive-table td:first-child { background-color: #f1f5f9 !important; font-weight: bold !important; text-align: center !important; padding-left: 0.75rem !important; }
                #article-view .responsive-table td:first-child::before { content: '' !important; }
                
                /* カード/テーブル切り替え用 */
                #article-view .show-table-view.table-wrapper { overflow-x: auto !important; }
                #article-view .show-table-view .responsive-table { min-width: 600px !important; }
                #article-view .show-table-view .responsive-table thead { display: table-header-group !important; }
                #article-view .show-table-view .responsive-table tr { display: table-row !important; border: none !important; box-shadow: none !important; }
                #article-view .show-table-view .responsive-table td { display: table-cell !important; border: 1px solid #cbd5e1 !important; padding: 0.5rem !important; position: static !important; text-align: center !important; }
                #article-view .show-table-view .responsive-table td:first-child { text-align: left !important; position: sticky !important; left: 0 !important; }
                #article-view .show-table-view .responsive-table td::before { content: none !important; }
                #article-view .show-table-view tr.bg-slate-50 td { background-color: #f8fafc !important; }
                #article-view .show-table-view tr.bg-white td { background-color: #fff !important; }
                #article-view .show-table-view thead th { background-color: #f1f5f9 !important; }
              }
            </style>
            
            <header>
                <h1 class="text-3xl md:text-4xl font-bold text-slate-800">{headline}</h1>
                <p class="text-sm text-slate-500 mt-2">公開日：{pubDate}</p>
            </header>

            <p>「滋賀でショートコースを探している」<br/>
            「いきなりゴルフ場デビューは怖いから、まずは安いショートコースで練習したい」</p>
            <p>そう思って検索したあなたは、おそらく“2つの壁”にぶつかっていませんか？</p>
            <div class="not-prose my-8 p-4 md:p-6 rounded-lg border-2 border-amber-300 bg-amber-50">
                <h3 class="text-xl font-bold text-amber-800 mt-0 mb-4 text-center">
                    こんな「壁」にぶつかっていませんか？
                </h3>
                <div class="space-y-3">
                    <p class="text-lg font-semibold text-slate-700 m-0 leading-relaxed">
                        <span class="font-bold text-amber-900">①:</span> 「あれ？ 滋賀って練習場併設のショートコース、全然なくない？」
                    </p>
                    <p class="text-lg font-semibold text-slate-700 m-0 leading-relaxed">
                        <span class="font-bold text-amber-900">②:</span> 「ショートコースより普通にゴルフ場行ったほうがいいのでは？」
                    </p>
                </div>
            </div>
            <p>その感覚、半分は正しいです。<br/>
            事実、僕（筆者：セキ）が知る限り、滋賀県で「練習場に併設されている」ショートコースは、<br/><a href="/articles/365-nagahama/short-course/" class="text-green-700 underline hover:no-underline font-semibold">湖北の<strong>「365ゴルフクラブ ながはま」</strong></a>と、<a href="/articles/adogawa-sc-review/short-course/" class="text-green-700 underline hover:no-underline font-semibold">湖西の<strong>「安曇川スポーツセンター」</strong></a>の<strong>“たった2ヶ所”</strong>だけです。</p>
            <p>そして、どちらも大津市や草津市といった中心部からは、車で1時間〜2時間かかる場所にあります。</p>
            <p>では、なぜ僕がわざわざ東近江市から時間をかけてまで、これらの施設に通うのか？</p>
            <blockquote class="not-prose my-8 border-l-4 border-green-600 bg-green-50 p-4 md:p-6 rounded-r-lg">
                <p class="text-xl md:text-2xl font-bold text-green-800 m-0 italic">
                    「ゴルフ場の劣化版」ではなく、<br/>
                    「ゴルフ場では絶対にできない“特訓”ができる場所」
                </p>
            </blockquote>
            <p>これが、僕がわざわざ時間をかけて通う理由です。<br/><br/>具体的には…</p>
            <br/><ul class="list-disc list-inside space-y-2 prose">
                <li>本番のゴルフ場デビューが怖い初心者が、<strong>プレッシャーゼロで芝の感覚を養う</strong>ための場所。</li>
                <li>70ヤードの寄せだけを練習したい中級者が、<strong>混雑を気にせず「一人二役」で反復練習</strong>をするための場所。</li>
            </ul>
            <p><br/>この記事では、滋賀に“2つしかない”この貴重なショートコースを、僕が<strong>両方とも実際に体験</strong>した上で、<strong>「あなたが今、遠出してでも行くべきなのはどっちか？」</strong>に完璧な答えを出します。</p>

            
           <div class="summary-box bg-green-50 p-6 rounded-lg border border-green-200 my-8 not-prose">
                 <h2 class="text-xl font-bold mb-4 text-green-800 break-keep">
                    先に結論：「どっちへ行くべき？」
                 </h2>
                 <p class="text-slate-700">どちらも最高の施設ですが、目的によって選ぶべき場所が真逆です。</p>
                 <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                    <div class="bg-white p-4 rounded-lg border border-slate-200 shadow hover:shadow-md transition-shadow">
                        <h3 class="text-lg font-bold text-slate-800 mt-0 mb-2">① 本気で「上達」したいなら</h3>
                        <a href="#365-nagahama" class="text-2xl font-bold text-green-700 mb-2 block hover:underline decoration-green-700 underline-offset-4">
                            365 ながはま ▾
                        </a>
                        <p class="text-sm text-slate-600 m-0">本格的なグリーンとバンカーがあり、「一人二役」練習に最適。<br class="md:hidden" />練習場もトップトレーサー完備で、「上達の黄金サイクル」が回せます。</p>
                    </div>
                    <div class="bg-white p-4 rounded-lg border border-slate-200 shadow hover:shadow-md transition-shadow">
                        <h3 class="text-lg font-bold text-slate-800 mt-0 mb-2">② 「家族で楽しむ・回り放題」なら</h3>
                        <a href="#adogawa-sc" class="text-2xl font-bold text-green-700 mb-2 block hover:underline decoration-green-700 underline-offset-4">
                            安曇川スポーツセンター ▾
                        </a>
                        <p class="text-sm text-slate-600 m-0">グリーンは「公園並み」ですが、全日3,000円で回り放題。<br class="md:hidden" />家族連れのアクティビティや、コスパ重視で「ゴルフを楽しむ」ならこちら。<strong>併設の300Y練習場（別料金）</strong>も圧巻です。</p>
                    </div>
                 </div>
            </div>

            <div class="toc-container bg-slate-50 p-6 rounded-lg border border-slate-200 my-8 not-prose">
                <h2 class="text-xl font-bold mb-4 text-slate-800">この記事の目次</h2>
                <ul class="space-y-2 list-disc list-inside">
                    <li><a href="#comparison-table" class="text-green-700 hover:underline">【ひと目でわかる】滋賀のショートコース2施設 徹底比較表</a></li>
                    <li><a href="#qanda" class="text-green-700 hover:underline">補足：ショートコースと本コース（ゴルフ場）の決定的な違いは？</a></li>
                    <li><a href="#365-nagahama" class="text-green-700 hover:underline">① 365ゴルフクラブ ながはま（湖北）- 本格練習の“ホーム”</a></li>
                    <li><a href="#adogawa-sc" class="text-green-700 hover:underline">② 安曇川スポーツセンター（湖西）- 楽しさ・コスパの“楽園”</a></li>
                    <li><a href="#conclusion" class="text-green-700 hover:underline">結論：あなたが今、行くべきなのはどっち？</a></li>
                </ul>
            </div>

            <h2 id="comparison-table" class="scroll-mt-24 text-2xl md:text-3xl font-bold text-slate-800 mt-12 mb-4">
                【ひと目でわかる】<br class="md:hidden" />滋賀のショートコース2施設 <br class="md:hidden" />徹底比較表
            </h2>
            <p>まずは、僕が両方体験して分かった「本音」を、比較表にまとめました。</p>
            
            <div class="not-prose my-4 text-center">
                <button class="view-toggle-btn md:hidden inline-flex items-center justify-center bg-slate-600 text-white font-semibold py-2 px-4 rounded-lg shadow hover:bg-slate-700 transition-colors duration-200 text-sm" data-target-id="summary-table-container">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M15.707 15.707a1 1 0 01-1.414 0l-5-5a1 1 0 010-1.414l5-5a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 010 1.414zm-6 0a1 1 0 01-1.414 0l-5-5a1 1 0 010-1.414l5-5a1 1 0 011.414 1.414L5.414 10l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"></path></svg>
                    画面を横にして一覧表で見る
                </button>
            </div>

            <div id="summary-table-container" class="table-wrapper my-6 not-prose">
                <table class="w-full text-sm text-left border border-slate-300 min-w-table-pc responsive-table">
                    <thead class="bg-slate-100">
                        <tr>
                            <th class="px-4 py-3 border border-slate-300 align-middle text-center whitespace-nowrap">比較項目</th>
                            <th class="px-4 py-3 border border-slate-300 align-middle text-center whitespace-nowrap">365 ながはま</th>
                            <th class="px-4 py-3 border border-slate-300 align-middle text-center whitespace-nowrap">安曇川スポーツセンター</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="bg-white">
                            <td data-label="比較項目" class="px-4 py-2 border align-middle font-semibold whitespace-nowrap bg-slate-50">場所</td>
                            <td data-label="365 ながはま" class="px-4 py-2 border text-center align-middle">{comparisonData[0].location}</td>
                            <td data-label="安曇川 SC" class="px-4 py-2 border text-center align-middle">{comparisonData[1].location}</td>
                        </tr>
                        <tr class="bg-slate-50">
                            <td data-label="比較項目" class="px-4 py-2 border align-middle font-semibold whitespace-nowrap bg-slate-50">料金</td>
                            <td data-label="365 ながはま" class="px-4 py-2 border text-center align-middle"><strong>{comparisonData[0].price_display}</strong> ({comparisonData[0].price_detail})</td>
                            <td data-label="安曇川 SC" class="px-4 py-2 border text-center align-middle"><strong>{comparisonData[1].price_display}</strong> ({comparisonData[1].price_detail})</td>
                        </tr>
                        <tr class="bg-white">
                            <td data-label="比較項目" class="px-4 py-2 border align-middle font-semibold whitespace-nowrap bg-slate-50">1日回り放題</td>
                            <td data-label="365 ながはま" class="px-4 py-2 border text-center align-middle">{comparisonData[0].plan}</td>
                            <td data-label="安曇川 SC" class="px-4 py-2 border text-center align-middle">{comparisonData[1].plan}</td>
