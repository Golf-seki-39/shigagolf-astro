  setPlan: [
    { type: 'メンバー（全日）', price: 1480, add: 300 },
    { type: 'ビジター (平日)', price: 1780, add: 500 },
    { type: 'ビジター (土日祝)', price: 1980, add: 500 }
  ],
  soloPlan: [
    // ★ V3: メンバーを「全日」に修正
    { type: 'メンバー (全日)', price: 980, add: 300 },
    { type: 'ビジター (平日)', price: 1280, add: 500 },
    { type: 'ビジター (土日祝)', price: 1480, add: 500 },
    // ★ V3: ジュニア料金を「メンバー/ビジター（全日）」に修正
    { type: 'ジュニア (メンバー・全日)', price: 780, add: 300 },
